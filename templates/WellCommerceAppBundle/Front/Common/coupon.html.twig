{% trans_default_domain "wellcommerce" %}
{% if order.coupon != null %}
    {% set coupon = order.coupon %}
    <div class="col-lg-7 col-xs-6">
        <div class="coupon">
            <h4>{% trans %}coupon.heading.code{% endtrans %}</h4>
            <div class="form-group">
                <div class="input-group">
                    <input type="text" value="{{ coupon.code }}" class="form-control" disabled>

                    <div class="input-group-addon">
                        <button type="submit" class="btn btn-primary btn-sm" id="remove_coupon">{% trans %}coupon.label.remove{% endtrans %}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-5 col-xs-6">
        <div class="row">
            <div class="col-xs-6 text-right">
                <h4><br/><br/>{% trans %}coupon.heading.discount{% endtrans %}</h4>
            </div>
            <div class="col-xs-6">
                {% if coupon.modifierType == '-' %}
                    <h4><strong><br/><br/>-{{ format_price(coupon.modifierValue, coupon.currency) }}</strong></h4>
                {% else %}
                    <h4><strong><br/><br/>-{{ coupon.modifierValue }}{{ coupon.modifierType }}</strong></h4>
                {% endif %}
            </div>
        </div>
    </div>
{% else %}
    <div class="col-lg-7 col-xs-6">
        <div class="coupon">
            <h4>{% trans %}coupon.heading.code{% endtrans %}</h4>
            <div class="form-group">
                <div class="input-group">
                    <input type="text" value="" class="form-control" id="coupon_code">

                    <div class="input-group-addon">
                        <button type="submit" class="btn btn-primary btn-sm" id="use_coupon">{% trans %}coupon.label.accept{% endtrans %}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}
