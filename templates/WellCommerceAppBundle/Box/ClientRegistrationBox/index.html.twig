{% trans_default_domain "wellcommerce" %}
{% import "WellCommerceAppBundle:Front/Form:macros.html.twig" as macros %}
<div class="well-form">
    <div class="row">
        <div class="col-sm-6">
            <div class="btn-group btn-group-justified" role="group">
                {% if currentShop().facebookConnectEnabled == true %}
                    <div class="btn-group btn-group-oauth" role="group">
                        <a href="{{ path('front.oauth.connect', {"provider": "facebook"}) }}" class="btn btn-fb"><i class="fa fa-facebook"></i></a>
                    </div>
                {% endif %}
                {% if currentShop().googleConnectEnabled == true %}
                    <div class="btn-group btn-group-oauth" role="group">
                        <a href="{{ path('front.oauth.connect', {"provider": "google"}) }}" class="btn btn-google"><i class="fa fa-google-plus"></i></a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
<div class="well-form">
    <h4>{% trans %}client.heading.register{% endtrans %}<small>{% trans %}form.help.required_fields{% endtrans %}</small></h4>

    {% include 'WellCommerceAppBundle:Front/Common:flashes.html.twig' %}

    {{ macros.form_begin(form, 'signup-form') }}

        {{ macros.element(form.getChildren().get('contactDetails').getChildren().get('contactDetails.firstName')) }}
        {{ macros.element(form.getChildren().get('contactDetails').getChildren().get('contactDetails.lastName')) }}
        {{ macros.element(form.getChildren().get('contactDetails').getChildren().get('contactDetails.phone')) }}
        {{ macros.element(form.getChildren().get('clientDetails').getChildren().get('clientDetails.username')) }}
        {{ macros.element(form.getChildren().get('clientDetails').getChildren().get('clientDetails.hashedPassword')) }}
        {{ macros.element(form.getChildren().get('clientDetails').getChildren().get('clientDetails.passwordConfirm')) }}

        <h4 class="mtp30">{% trans %}client.heading.terms_conditions{% endtrans %}</h4>
        {{ macros.element(form.getChildren().get('clientDetails').getChildren().get('clientDetails.conditionsAccepted')) }}
        {{ macros.element(form.getChildren().get('clientDetails').getChildren().get('clientDetails.newsletterAccepted')) }}

        <div class="clearfix">
            <button type="submit" class="btn btn-primary pull-right">{% trans %}client.button.register{% endtrans %}</button>
        </div>
    {{ macros.form_end(form) }}
</div>
