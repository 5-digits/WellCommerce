<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cache_manager.class">Zend\Cache\StorageFactory</parameter>
        <parameter key="config_locator.class">Symfony\Component\Config\FileLocator</parameter>
        <parameter key="controller_resolver.class">WellCommerce\Core\Component\Controller\ControllerResolver</parameter>
        <parameter key="datagrid_builder.class">WellCommerce\Core\Component\DataGrid\DataGridBuilder</parameter>
        <parameter key="event_dispatcher.class">Symfony\Component\EventDispatcher\ContainerAwareEventDispatcher</parameter>
        <parameter key="encryption.class">Illuminate\Encryption\Encrypter</parameter>
        <parameter key="finder.class">Symfony\Component\Finder\Finder</parameter>
        <parameter key="filesystem.class">Symfony\Component\Filesystem\Filesystem</parameter>
        <parameter key="form_builder.class">WellCommerce\Core\Component\Form\FormBuilder</parameter>
        <parameter key="helper.class">WellCommerce\Core\Helper</parameter>
        <parameter key="kernel.class">Symfony\Component\HttpKernel\DependencyInjection\ContainerAwareHttpKernel</parameter>
        <parameter key="layout_manager.class">WellCommerce\Core\Layout\LayoutManager</parameter>
        <parameter key="layout_renderer.class">WellCommerce\Core\Layout\LayoutRenderer</parameter>
        <parameter key="image_gallery.class">WellCommerce\Core\Uploader\ImageGallery</parameter>
        <parameter key="translation.class">WellCommerce\Core\Translation\Translation</parameter>
        <parameter key="xajax_manager.class">WellCommerce\Core\Helper\XajaxManager</parameter>
        <parameter key="uploader.class">WellCommerce\Core\Uploader\Uploader</parameter>
        <parameter key="xajax.class">xajax</parameter>
        <parameter key="request_stack.class">Symfony\Component\HttpFoundation\RequestStack</parameter>
    </parameters>

    <services>

        <service id="request" synthetic="true"/>

        <service id="finder" class="%finder.class%"/>

        <service id="filesystem" class="%filesystem.class%"/>

        <service id="config_locator" class="%config_locator.class%">
            <argument>%application.root_path%config</argument>
        </service>

        <service id="cache_manager" class="%cache_manager.class%" factory-class="%cache_manager.class%" factory-method="factory">
            <argument type="collection">
                <argument key="adapter" type="collection">
                    <argument key="name">filesystem</argument>
                </argument>
                <argument key="plugins" type="collection">
                    <argument>Serializer</argument>
                </argument>
                <argument key="options" type="collection">
                    <argument key="namespace">wellcommerce</argument>
                    <argument key="cacheDir">%application.root_path%var/serialization</argument>
                </argument>
            </argument>
        </service>

        <service id="encryption" class="%encryption.class%">
            <argument>%security.encryption_key%</argument>
        </service>

        <service id="helper" class="%helper.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="layout_manager" class="%layout_manager.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="layout_renderer" class="%layout_renderer.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setLayoutRepository">
                <argument type="service" id="layout.repository"/>
            </call>
        </service>

        <service id="event_dispatcher" class="%event_dispatcher.class%">
            <argument type="service" id="service_container"/>
        </service>

        <service id="form_builder" class="%form_builder.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="datagrid_builder" class="%datagrid_builder.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setDatabaseManager">
                <argument type="service" id="database_manager"/>
            </call>
        </service>

        <service id="controller_resolver" class="%controller_resolver.class%" public="false">
            <argument type="service" id="service_container" />
        </service>

        <service id="controller_resolver" class="%controller_resolver.class%">
            <argument type="service" id="service_container"/>
        </service>

        <service id="xajax" class="%xajax.class%"/>

        <service id="xajax_manager" class="%xajax_manager.class%">
            <argument type="service" id="service_container"/>
        </service>

        <service id="image_gallery" class="%image_gallery.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setPaths">
                <argument>%application.gallery_paths%</argument>
            </call>
            <call method="setFiles" />
        </service>

        <service id="uploader" class="%uploader.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setPaths">
                <argument>%application.gallery_paths%</argument>
            </call>
        </service>

        <service id="kernel" class="%kernel.class%">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="service_container"/>
            <argument type="service" id="controller_resolver"/>
            <argument type="service" id="request_stack" />
        </service>

        <service id="request_stack" class="%request_stack.class%" />

        <service id="translation" class="%translation.class%">
            <argument type="service" id="service_container"/>
            <argument>%locale%</argument>
        </service>

        <service id="admin_user_listener" class="WellCommerce\Core\EventListener\AdminUserListener">
            <argument type="service" id="service_container"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>