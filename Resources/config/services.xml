<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="web.home_page.controller.front" class="WellCommerce\Bundle\AppBundle\Controller\Front\HomePageController">
            <argument type="service" id="home_page.manager"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="home_page.manager" class="WellCommerce\Bundle\DoctrineBundle\Manager\Manager">
            <argument>null</argument>
            <argument>null</argument>
            <argument type="service" id="doctrine.helper"/>
            <argument type="service" id="event_dispatcher"/>
        </service>
    </services>
</container>
