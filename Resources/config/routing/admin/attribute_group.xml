<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin.attribute_group.index" path="/index">
        <default key="_controller">attribute_group.controller.admin:indexAction</default>
        <option key="require_admin_permission">attribute_group.index</option>
    </route>

    <route id="admin.attribute_group.grid" path="/grid">
        <default key="_controller">attribute_group.controller.admin:gridAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">attribute_group.index</option>
    </route>

    <route id="admin.attribute_group.add" path="/add">
        <default key="_controller">attribute_group.controller.admin:addAction</default>
        <option key="require_admin_permission">attribute_group.add</option>
    </route>

    <route id="admin.attribute_group.edit" path="/edit/{id}">
        <default key="_controller">attribute_group.controller.admin:editAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">attribute_group.edit</option>
    </route>

    <route id="admin.attribute_group.delete" path="/delete/{id}">
        <default key="_controller">attribute_group.controller.admin:deleteAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">attribute_group.delete</option>
    </route>

    <route id="admin.attribute_group.ajax.index" path="ajax/index">
        <default key="_controller">attribute_group.controller.admin:ajaxIndexAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">attribute_group.index</option>
    </route>
</routes>
