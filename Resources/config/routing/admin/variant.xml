<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin.variant.index" path="/index">
        <default key="_controller">variant.controller.admin:indexAction</default>
        <option key="require_admin_permission">variant.index</option>
    </route>

    <route id="admin.variant.grid" path="/grid">
        <default key="_controller">variant.controller.admin:gridAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">variant.index</option>
    </route>

    <route id="admin.variant.delete" path="/delete/{id}">
        <default key="_controller">variant.controller.admin:deleteAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">variant.delete</option>
    </route>
</routes>
