<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/order_status.xml"/>
    </imports>

    <services>
        <service id="order_status.repository" class="WellCommerce\Bundle\OrderBundle\Repository\OrderStatusRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceOrderBundle:OrderStatus</argument>
        </service>

        <service id="order_status.factory" class="WellCommerce\Bundle\OrderBundle\Factory\OrderStatusFactory"/>

        <service id="order_status.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher"/>
        </service>
    </services>
</container>
