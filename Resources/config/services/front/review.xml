<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="review.form_builder.front" class="WellCommerce\Bundle\ReviewBundle\Form\Front\ReviewFormBuilder" parent="core.form_builder" />

        <service id="review.layout_box.controller" class="WellCommerce\Bundle\ReviewBundle\Controller\Box\ReviewBoxController">
            <argument type="service" id="review.manager"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
    </services>
</container>
