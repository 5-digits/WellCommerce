<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/user.xml"/>
    </imports>

    <services>
        <service id="user.repository" class="WellCommerce\Bundle\UserBundle\Repository\UserRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceUserBundle:User</argument>
        </service>

        <service id="user.factory" class="WellCommerce\Bundle\UserBundle\Factory\UserFactory"/>

        <service id="user.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="security.helper" class="WellCommerce\Bundle\UserBundle\Helper\Security\SecurityHelper">
            <argument type="service" id="security.token_storage"/>
            <argument type="service" id="user.repository"/>
        </service>
    </services>
</container>
