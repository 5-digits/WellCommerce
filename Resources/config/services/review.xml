<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/review.xml"/>
        <import resource="front/review.xml"/>
    </imports>

    <services>
        <service id="review.repository" class="WellCommerce\Bundle\ReviewBundle\Repository\ReviewRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceReviewBundle:Review</argument>
        </service>

        <service id="review.factory" class="WellCommerce\Bundle\ReviewBundle\Factory\ReviewFactory" />

        <service id="review.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="twig.extension.review" class="WellCommerce\Bundle\ReviewBundle\Twig\Extension\ReviewExtension">
            <tag name="twig.extension"/>
        </service>
    </services>
</container>
