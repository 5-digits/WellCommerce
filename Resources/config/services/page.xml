<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/page.xml"/>
        <import resource="front/page.xml"/>
    </imports>

    <services>
        <service id="page.repository" class="WellCommerce\Bundle\AppBundle\Repository\PageRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceAppBundle:Page</argument>
        </service>

        <service id="page.route.generator" class="WellCommerce\Bundle\AppBundle\Service\Routing\Generator\PageRouteGenerator">
            <argument type="collection" key="defaults">
                <argument key="_controller">page.controller.front:indexAction</argument>
            </argument>
            <argument type="collection" key="requirements" />
            <tag name="route.generator" />
        </service>

        <service id="page.factory" class="WellCommerce\Bundle\AppBundle\Factory\PageFactory" />

        <service id="page.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher" />
        </service>
    </services>
</container>
