{% trans_default_domain "wellcommerce" %}

<div class="table-responsive">
    <table class="table products-table mbt60">
        <thead>
        <tr>
            <th class="text-center" colspan="2">{% trans %}cart.table.heading_product{% endtrans %}</th>
            <th class="text-center">{% trans %}cart.table.heading_price{% endtrans %}</th>
            <th class="text-center">{% trans %}cart.table.heading_quantity{% endtrans %}</th>
            <th class="text-center">{% trans %}cart.table.heading_total{% endtrans %}</th>
            <th></th>
        </tr>
        </thead>

        <tbody>
        {% for item in cartProducts.rows %}
            <tr>
                <td><img src="{{ image(item.photo, 'small') }}" alt="{{ item.name }}"/></td>
                <td><a href="{{ item.route }}">{{ item.name }}</a></td>
                <td class="text-center">
                    {% if item.isDiscountValid == 1 %}
                        <span class="price promo">
					        <small class="block">{{ format_price(item.price, item.currency) }}</small>
                            {{ format_price(item.discountedPrice, item.currency) }}
					    </span>
                    {% else %}
                        <span class="price">
						    {{ format_price(item.price, item.currency) }}
						</span>
                    {% endif %}
                </td>
                <td class="text-center">
                    <input type="text" class="form-control quantity-spinner" value="{{ item.quantity }}" data-id="{{ item.id }}"/>
                </td>
                <td class="text-center">
                    {% if item.isDiscountValid == 1 %}
                        <span class="price promo">
					        <small class="block">{{ format_price(item.price, item.currency, null, null, item.quantity) }}</small>
                            {{ format_price(item.discountedPrice, item.currency, null, null, item.quantity) }}
					    </span>
                    {% else %}
                        <span class="price">
						    {{ format_price(item.price, item.currency, null, null, item.quantity) }}
						</span>
                    {% endif %}
                </td>
                <td class="text-center">
                    <a href="{{ path('front.cart.delete',{"id": item.id}) }}" class="btn btn-link light btn-remove"><img src="{{ asset('themes/wellcommerce/assets/img/ico-remove.png') }}"/></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
