{% trans_default_domain "wellcommerce" %}

<div class="products-grid">
    <div class="row">
        {% for item in dataset.rows %}
        <div class="col-lg-3">
            <div class="thumbnail">
                <div class="body">
                    <a href="{{ item.route }}" class="photo">
                        <img src="{{ image(item.photo, 'normal') }}" alt="{{ item.name }}">
                    </a>

                    <a href="{{ item.route }}" class="caption">
                        <div class="labels">
                            <span class="label">Bestseller {{ item.status|json_encode }}</span>
                        </div>
                        {% if item.discountedPrice is not null %}
                            <span class="price promo"><small>{{ format_price(item.price, item.currency) }}</small>{{ format_price(item.discountedPrice, item.currency) }}</span>
                        {% else %}
                            <span class="price">{{ format_price(item.price, item.currency) }}</span>
                        {% endif %}
                        <span class="name">{{ item.name }}</span>
                    </a>

                    <a href="{{ path('front.cart.add',{"id": item.id}) }}" class="btn btn-primary text-left add-cart">{% trans %}cart.button.add{% endtrans %}<i class="pull-right"><img src="{{ asset('themes/wellcommerce/assets/img/add-to-cart.png') }}"></i></a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
