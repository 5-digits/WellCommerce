<div class="box">
    <div class="panel panel-default filters">
        <div class="panel-body">
            <fieldset>
                <h5>{% trans %}layered_navigation.label.price{% endtrans %}
                    <small>({{ app.request.session.get('_currency')|upper }})</small>
                </h5>

                <form class="form-inline price" role="form">
                    <input type="number" class="form-control" id="price-from" placeholder="from">
                    <span class="divider">-</span>
                    <input type="number" class="form-control" id="price-to" placeholder="to">
                </form>
            </fieldset>

            <fieldset>
                <h5>{% trans %}layered_navigation.label.brands{% endtrans %}</h5>
                {% for producer in producers %}
                <div class="checkbox">
                    <label>
                        <input type="checkbox" value="{{ producer.id }}">
                        {{ producer.name }} <span>({{ producer.products }})</span>
                    </label>
                </div>
                {% endfor %}
            </fieldset>
        </div>
    </div>
</div>

