{% trans_default_domain "wellcommerce" %}
{% import "WellCommerceFormBundle:Front/Common:macros.html.twig" as macros %}
{% include 'WellCommerceWebBundle:Front/Common:flashes.html.twig' %}
<div class="well-form">
    <h4>{% trans %}client.heading.register{% endtrans %}<small>{% trans %}form.help.required_fields{% endtrans %}</small></h4>

    {{ macros.form_begin(form, 'signup-form') }}

        {{ macros.element(form.getChildren().get('firstName')) }}

        {{ macros.element(form.getChildren().get('lastName')) }}

        {{ macros.element(form.getChildren().get('phone')) }}

        {{ macros.element(form.getChildren().get('email')) }}

        {{ macros.element(form.getChildren().get('password')) }}

        <div class="alert alert-sm mtp30">
            <strong>Benefits from registration</strong>
            <ul>
                <li>Track the current status of your shipment</li>
                <li>Receive additional discounts</li>
            </ul>
        </div>


        <h4 class="mtp30">Terms and conditions</h4>

        {{ macros.element(form.getChildren().get('conditionsAccepted')) }}

        {{ macros.element(form.getChildren().get('newsletterAccepted')) }}

        <div class="clearfix">
            <button type="submit" class="btn btn-primary pull-right">{% trans %}client.button.register{% endtrans %}</button>
        </div>
    {{ macros.form_end(form) }}
</div>
