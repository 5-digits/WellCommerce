{% import "WellCommerceFormBundle:Front/Common:macros.html.twig" as macros %}
{% include 'WellCommerceWebBundle:Front/Common:flashes.html.twig' %}
{% trans_default_domain "wellcommerce" %}
<div class="well-form">
    <h4>{% trans %}client.heading.login{% endtrans %}<small>{% trans %}form.help.required_fields{% endtrans %}</small></h4>

    {% if error %}
        <div class="alert alert-danger" role="alert">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    {{ macros.form_begin(form) }}

        {% for element in elements %}
            {{ macros.element(element) }}
        {% endfor %}

        <div class="clearfix">
            <a href="{{ path('front.client.password') }}" class="btn btn-link nopadding notransform coming-soon">{% trans %}client.link.password_forgotten{% endtrans %}</a>
            <button type="submit" class="btn btn-primary pull-right">{% trans %}client.button.login{% endtrans %}</button>
        </div>
    {{ macros.form_end(form) }}

    <div class="alert alert-sm mtp30">
        <strong>If you are our registered customer</strong>
        <ul>
            <li>You buy quick & easy</li>
            <li>You can track progress of your orders</li>
            <li>You will receive information about promotions</li>
        </ul>
    </div>
</div>
