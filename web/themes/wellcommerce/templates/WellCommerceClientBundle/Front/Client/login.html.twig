{% extends 'WellCommerceWebBundle:Front:layout.html.twig' %}
{% import "WellCommerceWebBundle:Front/Common:form_macros.html.twig" as macros %}
{% block content %}
    <div class="col-lg-12">
        {% include 'WellCommerceWebBundle:Front:breadcrumbs.html.twig' %}
        {% include 'WellCommerceCategoryBundle:Front/Common:options.html.twig' %}
    </div>
    <div class="col-lg-3 col-md-3">
        <div class="row">
            <div class="col-lg-12">
                {{ layout_box('category.menu') }}
            </div>

            <div class="col-lg-12">
                {{ macros.form_begin(form, 'login-form') }}
                    {{ macros.element(elements.get('_username')) }}
                    {{ macros.element(elements.get('_password')) }}
                    {{ macros.element(elements.get('log_in'), 'btn btn-lg btn-primary btn-block') }}
                {{ macros.form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
