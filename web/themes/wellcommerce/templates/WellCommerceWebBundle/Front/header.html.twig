<header>
    <div class="tools">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 left">
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle btn-sm" type="button" id="CurrencyMenu" data-toggle="dropdown" aria-expanded="true">
                            {% trans %}front.locale.label{% endtrans %}: {{ app.request.locale|upper }}
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="CurrencyMenu">
                            {% for locale in locales %}
                                <li><a href="{{ path('front.locale.switch',{"_locale": locale.code}) }}">{{ locale.code }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>

                <div class="col-lg-6 text-right right">
                    {% if app.user and is_granted('ROLE_CLIENT') %}
                        <a href="{{ path('front.client.index') }}" class="btn btn-default btn-sm">My account</a>
                        <a href="{{ path('front.client.logout') }}" class="btn btn-default btn-sm">Logout</a>
                    {%  else %}
                    <a href="{{ path('front.client.login') }}" class="btn btn-default btn-sm">Sign in</a>
                    <a href="{{ path('front.client.register') }}" class="btn btn-default btn-sm">Sign up</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {% include 'WellCommerceWebBundle:Front:nav.html.twig' %}
</header>
