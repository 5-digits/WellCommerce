{% trans_default_domain "wellcommerce" %}
<ul class="breadcrumbs">
    {% for crumb in breadcrumbs() %}
        {% if crumb.url != '' and loop.index != loop.length %}
		    <li><a href="{{ crumb.url }}" class="{{ crumb.cssClass }}">{{ crumb.label|trans }}</a></li>
        {% else %}
            <li class="{{ crumb.cssClass }}">{{ crumb.label|trans }}</li>
        {% endif %}
    {% endfor %}
</ul>
