{% trans_default_domain "wellcommerce" %}
<form class="form-horizontal">
    <input type="hidden" id="product" value="{{ product.id }}"/>
    <input type="hidden" id="variant" value="0"/>
    {% for attributeId, attributeData in attributes %}
        <div class="form-group">
            <label class="col-md-4 col-sm-3 control-label">{{ attributeData.name }}</label>
            <div class="col-md-8 col-sm-9">
                <select class="form-control attribute">
                    {% for attributeValueId, attributeValueName in attributeData.values %}
                        <option data-attribute="{{ attributeId }}" value="{{ attributeValueId }}">{{ attributeValueName }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    {% endfor %}
    <div class="form-group">
        <label for="quantity" class="col-md-4 col-sm-3 control-label">{% trans %}product.label.quantity{% endtrans %}</label>
        <div class="col-md-8 col-sm-9">
            <input type="number" id="quantity" class="form-control" value="1" />
        </div>
    </div>
    <button class="btn btn-primary btn-block text-left" type="submit" id="add-cart">{% trans %}cart.button.add{% endtrans %}<img src="{{ asset('themes/wellcommerce-default-theme/assets/img/add-to-cart.png') }}" class="pull-right" /></button>
</form>
