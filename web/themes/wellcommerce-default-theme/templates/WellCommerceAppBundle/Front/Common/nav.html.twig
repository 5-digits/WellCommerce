{% trans_default_domain "wellcommerce" %}
{% if app.user and is_granted('ROLE_CLIENT') %}
    {% set wishlist = wishlist(app.user) %}
    <a href="{{ path('front.client_settings.index') }}" class="btn btn-default btn-sm">{% trans %}client.link.settings{% endtrans %}</a>
    <a href="{{ path('front.client_order.index') }}" class="btn btn-default btn-sm">{% trans %}client.link.orders{% endtrans %}</a>
    <a href="{{ path('front.wishlist.index') }}" class="btn btn-default btn-sm">{% trans %}client.link.wishlist{% endtrans %} ({{ wishlist.pagination.totalRows }})</a>
    <a href="{{ path('front.client.logout') }}" class="btn btn-default btn-sm">{% trans %}client.link.logout{% endtrans %}</a>
{%  else %}
    <a href="{{ path('front.client.login') }}" class="btn btn-default btn-sm">{% trans %}client.link.login{% endtrans %}</a>
    <a href="{{ path('front.client.registration') }}" class="btn btn-default btn-sm">{% trans %}client.link.register{% endtrans %}</a>
{% endif %}
