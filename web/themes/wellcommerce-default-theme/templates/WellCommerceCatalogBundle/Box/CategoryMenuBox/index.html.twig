{% trans_default_domain "wellcommerce" %}
<div class="box">
    <div class="list-group main-categories">
        {% for root in categoriesTree() %}
            <a href="{{ root.route }}" class="list-group-item {% if root.id == active %}active{% endif %}">{{ root.name }}
                <small>({{ root.products_count }})</small>
                <span class="triangle"></span>
            </a>
            {% if root.id == active %}
                <ul>
                    {% for subcategory in categoriesTree(root.id) %}
                        <li>
                            <a href="{{ subcategory.route }}" class="list-group-item">{{ subcategory.name }}
                                <small>({{ subcategory.products_count }})</small>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        {% endfor %}
    </div>
</div>