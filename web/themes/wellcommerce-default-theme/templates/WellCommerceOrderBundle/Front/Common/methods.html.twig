{% trans_default_domain "wellcommerce" %}
<div class="methods">
    <div class="row mbt60">
        {% include 'WellCommerceAppBundle:Front/Common:coupon.html.twig' %}
    </div>

    <div class="row">
        <div class="col-lg-7 col-sm-6 col-xs-12">
            {{ macros.form_begin(form, 'cart') }}
            <div class="row mbt30">
                <div class="col-lg-6 col-xs-12">
                    <div class="row">
                        <div class="col-lg-10">
                            {{ macros.element(form.children.get('shippingAddress').children.get('shippingAddress.country'), 'hide-label') }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mbt30">
                <div class="col-lg-6 col-xs-12">
                    <h4>{% trans %}order.heading.choose_shipping_method{% endtrans %}</h4>
                    <div class="row">
                        <div class="col-lg-10">
                            {{ macros.element(form.getChildren().get('shippingMethod')) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mbt30">
                <div class="col-lg-6 col-xs-12">
                    <h4>{% trans %}order.heading.choose_payment_method{% endtrans %}</h4>

                    <div class="row">
                        <div class="col-lg-10">
                            {{ macros.element(form.getChildren().get('paymentMethod')) }}
                        </div>
                    </div>
                </div>
            </div>
            {{ macros.form_end(form) }}
        </div>

        {% if order.hasModifier('shipping_cost') %}
        <div class="col-lg-5 col-sm-6 col-xs-12">
            <div class="row">
                <div class="col-xs-6 text-right">
                    <h4><br/><br/>{% trans %}order.label.shipping_total{% endtrans %}</h4>
                </div>
                <div class="col-xs-6">
                    <h4><strong><br/><br/>{{ format_price(order.getModifier('shipping_cost').grossAmount, order.getModifier('shipping_cost').currency) }}</strong></h4>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
