{% trans_default_domain "wellcommerce" %}
<div class="summary mbt60">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-2">
            <div class="col-sm-9 col-xs-6 text-right">
                <span class="text-sm">{% trans %}order.label.product_total.gross_price{% endtrans %}</span>
            </div>
            <div class="col-sm-3 col-xs-6">
                <span class="text-sm addition">{{ format_price(order.productTotal.grossPrice, order.currency) }}</span>
            </div>
        </div>
    </div>
    {% for modifier in order.modifiers %}
    <div class="row">
        <div class="col-sm-10 col-sm-offset-2">
            <div class="col-sm-9 col-xs-6 text-right">
                <span class="text-sm">{{ (modifier.description)|trans({}, 'wellcommerce') }}</span>
            </div>
            <div class="col-sm-3 col-xs-6">
                {% if modifier.isSubtraction() %}
                    <span class="text-sm subtraction">-{{ format_price(modifier.grossAmount, modifier.currency, order.currency) }}</span>
                {% else %}
                    <span class="text-sm addition">{{ format_price(modifier.grossAmount, modifier.currency, order.currency) }}</span>
                {% endif %}
            </div>
        </div>
    </div>
    {% endfor %}
    <div class="row">
        <div class="col-sm-10 col-sm-offset-2">
            <div class="col-sm-9 col-xs-6 text-right">
                <span class="text">{% trans %}order.heading.order_total{% endtrans %}</span>
            </div>
            <div class="col-sm-3 col-xs-6">
                <span class="value">{{ format_price(order.summary.grossAmount) }}</span>
            </div>
        </div>
    </div>
</div>
