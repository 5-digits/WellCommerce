{% extends 'WellCommerceWebBundle:Front:layout.html.twig' %}
{% block content %}
    <div class="col-lg-12">
        {% include 'WellCommerceWebBundle:Front:breadcrumbs.html.twig' %}
        {% include 'WellCommerceCategoryBundle:Front/Common:options.html.twig' %}
    </div>
    <div class="col-lg-3 col-md-3">
        <div class="row">
            <div class="col-lg-12">
                {{ layout_box('category.menu.box') }}
            </div>

            <div class="col-lg-12">
                <div class="box">
                    <div class="panel panel-default filters">
                        <div class="panel-body">
                            <fieldset>
                                <h5>Price
                                    <small>(USD)</small>
                                </h5>

                                <form class="form-inline price" role="form">
                                    <input type="number" class="form-control" id="price-from" placeholder="from"><span
                                            class="divider">-</span><input type="number" class="form-control"
                                                                           id="price-to" placeholder="to">
                                </form>
                            </fieldset>

                            <fieldset>
                                <h5>Brands</h5>

                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" value="">
                                        LG <span>(11)</span>
                                    </label>
                                </div>

                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" value="">
                                        Samsung <span>(8)</span>
                                    </label>
                                </div>

                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" value="">
                                        Sony <span>(5)</span>
                                    </label>
                                </div>

                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" value="">
                                        Panasonic <span>(6)</span>
                                    </label>
                                </div>

                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" value="">
                                        Toshiba <span>(4)</span>
                                    </label>
                                </div>

                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-12">
                <div class="box">
                    <div class="panel panel-default questionnaire">
                        <div class="panel-body">
                            <fieldset>
                                <h5>Questionnaire</h5>

                                <div class="radio">
                                    <label>
                                        <input type="radio" name="Questionnaire" id="optionsRadios1" value="option1">
                                        Yes, until $100
                                    </label>
                                </div>

                                <div class="radio">
                                    <label>
                                        <input type="radio" name="Questionnaire" id="optionsRadios2" value="option2"
                                               checked="">
                                        Yes, until $100
                                    </label>
                                </div>

                                <div class="radio">
                                    <label>
                                        <input type="radio" name="Questionnaire" id="optionsRadios3" value="option3">
                                        Yes, more than $200
                                    </label>
                                </div>

                                <div class="radio">
                                    <label>
                                        <input type="radio" name="Questionnaire" id="optionsRadios4" value="option4">
                                        Probably not
                                    </label>
                                </div>

                                <a href="#" class="show-more">Show votes</a>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-9 col-md-9">
        {{ layout_box('category.products.box') }}
    </div>
{% endblock %}
