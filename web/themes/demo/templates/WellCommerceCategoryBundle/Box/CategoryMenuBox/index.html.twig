{% set active = 0 %}
{% if currentCategory.id is defined %}
    {% set active = currentCategory.id %}
{% endif %}

<div class="list-group">
    {% for category in categoriesTree %}

        <a href="{{ path(category.route) }}" class="list-group-item {% if category.id == active %}active{% endif %}">{{ category.name }}</a>
    {% endfor %}
</div>