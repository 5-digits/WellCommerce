<div class="row products-grid">
    {% for product in products %}
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6">
        <div class="thumbnail">
            <div class="labels">
                <span class="label label-info">Promotion</span>
            </div>
            <a href="{{ path(product.translation.route.id) }}">
                <img src="{{ image(product.photo.path, 'small') }}" alt="Apple iPhone 6">
            </a>
            <div class="caption">
                <h3>{{ product.translation.name }}</h3>
                <p class="clearfix">
                    <span class="pull-left"><b>{{ money(product.sellPrice) }}</b></span>
                    <span class="pull-right"><small><del>$14,99</del></small></span>
                </p>
                <a href="#" class="btn btn-primary btn-group-justified" role="button"><span class="glyphicon glyphicon-shopping-cart"></span> Add to cart</a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>

