<ul id="navigation">
    {% for firstLevel in menu %}
        {% if firstLevel.children is empty %}
            <li {% if firstLevel.active %}class="active"{% endif %}>
                <a href="{{ firstLevel.link }}" id="menu-{{ firstLevel.class }}"><span class="icon {{ firstLevel.class }}"></span>{{ firstLevel.name }}</a>
            </li>
        {% else %}
            <li>
                <a href="{{ firstLevel.link }}" id="menu-{{ firstLevel.class }}"><span class="icon {{ firstLevel.class }}"></span>{{ firstLevel.name }}</a>
                <ul>
                    {% for secondLevel in firstLevel.children %}
                        <li {% if secondLevel.active %}class="active"{% endif %}>
                            <a href="{{ secondLevel.link }}">{{ secondLevel.name }}</a>
                            {% if secondLevel.children is not empty %}
                                <ul>
                                    {% for thirdLevel in secondLevel.children %}
                                        <li>
                                            <a href="{{ thirdLevel.link }}">{{ thirdLevel.name }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </li>
        {% endif %}
    {% endfor %}
</ul>