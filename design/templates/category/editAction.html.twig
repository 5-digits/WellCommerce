{% extends "layout.html.twig" %}
{% block content %}
    <h2>{% trans %}Edit category{% endtrans %} "{{ category.translation.first().name }}"</h2>
    <ul class="possibilities">
        <li><a href="{{ path('admin.category.index') }}" class="button return"><span></span></a></li>
        <li><a href="#{{ form.name }}" rel="submit" class="button"><span>{% trans %}Save and finish{% endtrans %}</span></a>
        </li>
    </ul>
    <div class="layout-two-columns">
        <div class="column narrow-collapsed">
            <div class="block">
                {{ form(tree) }}
            </div>
        </div>
        <div class="column wide-collapsed">
            {{ form(form) }}
        </div>
    </div>
    <script type="text/javascript">
        function openCategoryEditor(sId) {
            if (sId == 0) {
                window.location = '{{ path('admin.category.index') }}';
            }
            else {
                window.location = '{{ path('admin.category.edit') }}/' + sId;
            }
        }
    </script>
{% endblock %}