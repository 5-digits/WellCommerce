{% extends "layout.html.twig" %}
{% block content %}
    <h2>{% trans %}Edit attribute group{% endtrans %}</h2>
    <ul class="possibilities">
        <li><a href="{{ path('admin.attribute.index') }}" class="button return"><span></span></a></li>
        <li><a href="#{{ form.name }}" rel="submit" class="button"><span>{% trans %}Save and finish{% endtrans %}</span></a>
        </li>
    </ul>

    <div class="block">
        <div class="scrollable-tabs">
            <ul>
                {% for group in groups %}
                    <li {% if group.id == attribute.id %} class="active"{% endif %}>
                        <a href="{{ path('admin.attribute.edit', {"id": group.id }) }}">
                            {{ group.translations.first().name }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        {{ form(form) }}
    </div>
{% endblock %}