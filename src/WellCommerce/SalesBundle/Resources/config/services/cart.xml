<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="cart.manager.front" class="WellCommerce\SalesBundle\Manager\Front\CartManager">
            <argument type="service" id="cart.repository"/>
            <argument type="service" id="cart.event_dispatcher"/>
            <argument type="service" id="cart.factory"/>
            <argument type="service" id="cart.form_builder"/>
            <call method="setCartProductManager">
                <argument type="service" id="cart_product.manager.front"/>
            </call>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="cart_product.manager.front" class="WellCommerce\SalesBundle\Manager\Front\CartProductManager">
            <argument type="service" id="cart_product.repository"/>
            <argument type="service" id="cart_product.event_dispatcher"/>
            <argument type="service" id="cart_product.factory"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="cart.purger" class="WellCommerce\SalesBundle\Purger\CartPurger">
            <argument type="service" id="service_container"/>
        </service>

        <service id="package.command.purge.carts" class="WellCommerce\SalesBundle\Command\PurgeCartsCommand">
            <tag name="console.command"/>
        </service>

        <service id="cart.controller.front" class="WellCommerce\SalesBundle\Controller\Front\CartController">
            <argument type="service" id="cart.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="cart.repository" class="WellCommerce\SalesBundle\Repository\CartRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceSalesBundle:Cart</argument>
        </service>

        <service id="cart_product.repository" class="WellCommerce\SalesBundle\Repository\CartProductRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceSalesBundle:CartProduct</argument>
        </service>

        <service id="cart_product.dataset.query_builder" class="WellCommerce\SalesBundle\DataSet\Front\CartProductDataSetQueryBuilder">
            <argument type="service" id="cart_product.repository"/>
            <argument type="service" id="cart.context.front"/>
        </service>

        <service id="cart_product.dataset" class="WellCommerce\SalesBundle\DataSet\Front\CartProductDataSet">
            <argument type="service" id="cart_product.dataset.query_builder"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="cart_product.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="cart.form_builder" class="WellCommerce\SalesBundle\Form\Front\CartFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="cart_product.event_dispatcher"/>
            <call method="setShippingMethodProvider">
                <argument type="service" id="shipping_method.provider"/>
            </call>
            <call method="setCartContext">
                <argument type="service" id="cart.context.front"/>
            </call>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="twig.extension.cart" class="WellCommerce\SalesBundle\Twig\Extension\CartExtension">
            <argument type="service" id="cart.context.front"/>
            <argument type="service" id="cart_product.dataset"/>
            <tag name="twig.extension"/>
        </service>

        <service id="cart.factory" class="WellCommerce\SalesBundle\Factory\CartFactory" />

        <service id="cart.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="cart_product.factory" class="WellCommerce\SalesBundle\Factory\CartProductFactory" />

        <service id="cart_product.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="cart.subscriber" class="WellCommerce\SalesBundle\EventListener\CartSubscriber">
            <argument type="service" id="cart.manager.front"/>
            <argument type="service" id="cart.visitor.traverser"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="cart.visitor.collection" class="WellCommerce\SalesBundle\Visitor\CartVisitorCollection" />

        <service id="cart.visitor.traverser" class="WellCommerce\SalesBundle\Visitor\CartVisitorTraverser">
            <argument type="service" id="cart.visitor.collection"/>
        </service>

        <service id="cart_totals.collector" class="WellCommerce\SalesBundle\Collector\CartTotalsCollector">
            <argument type="service" id="currency.helper"/>
        </service>

        <service id="cart_totals.cart.visitor" class="WellCommerce\SalesBundle\Visitor\CartTotalsVisitor">
            <argument type="service" id="cart_totals.collector"/>
            <tag name="cart.visitor"/>
        </service>

        <service id="cart_summary.collector" class="WellCommerce\SalesBundle\Collector\CartSummaryCollector">
            <argument type="service" id="currency.helper"/>
        </service>

        <service id="shipping_method.cart.visitor" class="WellCommerce\SalesBundle\Visitor\CartShippingMethodVisitor">
            <argument type="service" id="shipping_method.provider"/>
            <tag name="cart.visitor"/>
        </service>

        <service id="payment_method.cart.visitor" class="WellCommerce\SalesBundle\Visitor\CartPaymentMethodVisitor">
            <tag name="cart.visitor"/>
        </service>

        <service id="cart_product.request_param_converter" class="WellCommerce\SalesBundle\Request\ParamConverter\CartProductParamConverter">
            <argument type="service" id="cart_product.repository" />
            <argument>id</argument>
            <argument type="collection">
                <argument>WellCommerce\SalesBundle\Entity\CartProduct</argument>
                <argument>WellCommerce\SalesBundle\Entity\CartProductInterface</argument>
            </argument>
            <tag name="request.param_converter" converter="cart_product" priority="10"/>
        </service>

        <service id="cart.context.front" class="WellCommerce\SalesBundle\Context\Front\CartContext"/>
    </services>
</container>
