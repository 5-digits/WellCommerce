<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/currency.xml"/>
        <import resource="front/currency.xml"/>
    </imports>

    <services>
        <service id="currency.repository" class="WellCommerce\CommonBundle\Repository\CurrencyRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceCommonBundle:Currency</argument>
        </service>

        <service id="currency_rate.repository" class="WellCommerce\CommonBundle\Repository\CurrencyRateRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceCommonBundle:CurrencyRate</argument>
        </service>

        <service id="currency.subscriber" class="WellCommerce\CommonBundle\EventListener\CurrencySubscriber">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="currency.importer.ecb" class="WellCommerce\CommonBundle\Importer\EcbRatesImporter">
            <argument type="service" id="currency.repository"/>
            <argument type="service" id="currency_rate.repository"/>
            <argument type="service" id="doctrine.helper"/>
        </service>

        <service id="currency.converter" class="WellCommerce\CommonBundle\Converter\CurrencyConverter">
            <argument type="service" id="currency_rate.repository" />
            <argument type="service" id="request.helper"/>
        </service>

        <service id="currency.formatter" class="WellCommerce\CommonBundle\Formatter\CurrencyFormatter">
            <argument type="service" id="request.helper"/>
        </service>

        <service id="currency.helper" class="WellCommerce\CommonBundle\Helper\CurrencyHelper">
            <argument type="service" id="currency.converter" />
            <argument type="service" id="currency.formatter"/>
        </service>

        <service id="currency.factory" class="WellCommerce\CommonBundle\Factory\CurrencyFactory" />

        <service id="currency.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher" />
        </service>
    </services>
</container>
