<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="router.provider.endpoint" class="WellCommerce\CommonBundle\Provider\RouteProvider">
            <argument type="service" id="route.generator.collection" />
            <argument type="service" id="routing.repository" />
        </service>

        <service id="route.generator.collection" class="WellCommerce\CommonBundle\Generator\RouteGeneratorCollection" />

        <service id="twig.extension.routing_helper" class="WellCommerce\CommonBundle\Twig\Extension\RoutingHelperExtension">
            <argument type="service" id="request.helper"/>
            <tag name="twig.extension"/>
        </service>


        <service id="twig.extension.dynamic_routing" class="WellCommerce\CommonBundle\Twig\Extension\DynamicRoutingExtension">
            <argument type="service" id="router"/>
            <argument type="service" id="request.helper"/>
            <tag name="twig.extension"/>
        </service>
    </services>
</container>
