<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="services/dashboard.xml"/>
    </imports>

    <services>
        <service id="admin.subscriber" class="WellCommerce\Bundle\AdminBundle\EventListener\AdminSubscriber">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="admin_menu.builder" class="WellCommerce\Bundle\AdminBundle\MenuBuilder\AdminMenuBuilder"/>

        <service id="twig.extension.admin" class="WellCommerce\Bundle\AdminBundle\Twig\Extension\AdminExtension">
            <argument type="service" id="session"/>
            <tag name="twig.extension"/>
        </service>

        <service id="twig.extension.datagrid" class="WellCommerce\Bundle\AdminBundle\Twig\Extension\DataGridExtension">
            <argument>WellCommerceAdminBundle:DataGrid:datagrid.html.twig</argument>
            <tag name="twig.extension"/>
        </service>

        <service id="twig.extension.form" class="WellCommerce\Bundle\AdminBundle\Twig\Extension\FormJavascriptExtension">
            <argument type="service" id="form.renderer.javascript"/>
            <tag name="twig.extension"/>
        </service>
    </services>
</container>