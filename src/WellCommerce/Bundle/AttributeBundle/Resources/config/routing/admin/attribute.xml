<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin.attribute.index" path="/index">
        <default key="_controller">attribute.controller.admin:indexAction</default>
        <option key="require_admin_permission">attribute.index</option>
    </route>

    <route id="admin.attribute.grid" path="/grid">
        <default key="_controller">attribute.controller.admin:gridAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">attribute.index</option>
    </route>

    <route id="admin.attribute.add" path="/add">
        <default key="_controller">attribute.controller.admin:addAction</default>
        <option key="require_admin_permission">attribute.add</option>
    </route>

    <route id="admin.attribute.edit" path="/edit/{id}">
        <default key="_controller">attribute.controller.admin:editAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">attribute.edit</option>
    </route>

    <route id="admin.attribute.delete" path="/delete/{id}">
        <default key="_controller">attribute.controller.admin:deleteAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">attribute.delete</option>
    </route>
    
    <route id="admin.attribute.ajax.index" path="/ajax/index" methods="POST">
        <default key="_controller">attribute.controller.admin:ajaxIndexAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">attribute.index</option>
    </route>

    <route id="admin.attribute.ajax.add" path="/ajax/add" methods="POST">
        <default key="_controller">attribute.controller.admin:ajaxAddAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">attribute.add</option>
    </route>

    <route id="admin.attribute.ajax.generate" path="/ajax/generate" methods="POST">
        <default key="_controller">attribute.controller.admin:ajaxGenerateCartesianAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">attribute.add</option>
    </route>
</routes>
