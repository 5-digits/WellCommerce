<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/attribute.xml"/>
    </imports>

    <services>
        <service id="attribute.manager" class="WellCommerce\Bundle\AttributeBundle\Manager\AttributeManager" parent="core.manager">
            <argument type="service" id="attribute.repository"/>
            <argument type="service" id="attribute.factory"/>
        </service>
    </services>
</container>
