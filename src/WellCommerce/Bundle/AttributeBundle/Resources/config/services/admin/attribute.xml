<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="attribute.manager.admin" class="WellCommerce\Bundle\AttributeBundle\Manager\Admin\AttributeManager">
            <argument type="service" id="attribute.repository"/>
            <argument type="service" id="attribute.event_dispatcher"/>
            <argument type="service" id="attribute.factory"/>
            <argument type="service" id="attribute.form_builder"/>
            <argument type="service" id="attribute.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="attribute.controller.admin" class="WellCommerce\Bundle\AttributeBundle\Controller\Admin\AttributeController">
            <argument type="service" id="attribute.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="attribute.form_builder" class="WellCommerce\Bundle\AttributeBundle\Form\Admin\AttributeFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="attribute.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="attribute.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="attribute.dataset.query_builder.admin" class="WellCommerce\Bundle\AttributeBundle\DataSet\Admin\AttributeDataSetQueryBuilder" public="false">
            <argument type="service" id="attribute.repository"/>
        </service>

        <service id="attribute.dataset.admin" class="WellCommerce\Bundle\AttributeBundle\DataSet\Admin\AttributeDataSet">
            <argument type="service" id="attribute.dataset.query_builder.admin"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="attribute.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="attribute.datagrid" class="WellCommerce\Bundle\AttributeBundle\DataGrid\AttributeDataGrid">
            <argument key="identifier">availability</argument>
            <argument type="service" id="attribute.dataset.admin"/>
            <argument type="service" id="attribute.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
