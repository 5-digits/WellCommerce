<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="attribute_value.manager.admin" class="WellCommerce\Bundle\AttributeBundle\Manager\Admin\AttributeValueManager">
            <argument type="service" id="attribute_value.repository"/>
            <argument type="service" id="attribute_value.event_dispatcher"/>
            <argument type="service" id="attribute_value.factory"/>
            <argument type="service" id="attribute_value.form_builder"/>
            <argument type="service" id="attribute_value.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="attribute_value.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="attribute_value.controller.admin" class="WellCommerce\Bundle\AttributeBundle\Controller\Admin\AttributeValueController">
            <argument type="service" id="attribute_value.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="attribute_value.form_builder" class="WellCommerce\Bundle\AttributeBundle\Form\Admin\AttributeValueFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="attribute_value.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="attribute_value.dataset.query_builder.admin" class="WellCommerce\Bundle\AttributeBundle\DataSet\Admin\AttributeValueDataSetQueryBuilder" public="false">
            <argument type="service" id="attribute_value.repository"/>
        </service>

        <service id="attribute_value.dataset.admin" class="WellCommerce\Bundle\AttributeBundle\DataSet\Admin\AttributeValueDataSet">
            <argument type="service" id="attribute_value.dataset.query_builder.admin"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="attribute_value.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="attribute_value.datagrid" class="WellCommerce\Bundle\AttributeBundle\DataGrid\AttributeValueDataGrid">
            <argument key="identifier">availability</argument>
            <argument type="service" id="attribute_value.dataset.admin"/>
            <argument type="service" id="attribute_value.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
