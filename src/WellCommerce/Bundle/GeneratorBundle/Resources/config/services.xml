<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="generator.merger.extension_configuration" class="WellCommerce\Bundle\GeneratorBundle\Merger\ExtensionConfigurationMerger">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="generator.class_analyzer" class="WellCommerce\Bundle\GeneratorBundle\Reflection\ClassAnalyzer" />

        <service id="generator.extended_entity.dumper" class="WellCommerce\Bundle\GeneratorBundle\Dumper\ExtendedEntityDumper">
            <argument>%kernel.root_dir%/cache/%kernel.environment%/doctrine/orm/Extensions</argument>
        </service>

        <service id="generator.extended_entity.generator" class="WellCommerce\Bundle\GeneratorBundle\Generator\ExtendedEntityGenerator">
            <argument type="service" id="generator.class_analyzer"/>
            <argument type="service" id="generator.extended_entity.dumper"/>
            <argument>WellCommerce\Entity</argument>
        </service>

        <service id="generator.doctrine_schema_updater" class="WellCommerce\Bundle\GeneratorBundle\Updater\SchemaUpdater">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="generator.extended_entity" class="WellCommerce\Bundle\GeneratorBundle\Merger\DoctrineMappingMerger">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="generator.merger.doctrine_mapping" class="WellCommerce\Bundle\GeneratorBundle\Merger\DoctrineMappingMerger">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="generator.command.generate_entities_extra" class="WellCommerce\Bundle\GeneratorBundle\Command\GenerateExtendedEntitiesCommand">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="console.command" />
        </service>

        <service id="generator.command.generate_extensions_configuration" class="WellCommerce\Bundle\GeneratorBundle\Command\GenerateExtensionsConfigurationCommand">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="console.command" />
        </service>

        <service id="generator.extended_entity.cache_warmer" class="WellCommerce\Bundle\GeneratorBundle\CacheWarmer\ExtendedEntityCacheWarmer">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="kernel.cache_warmer" />
        </service>
    </services>
</container>
