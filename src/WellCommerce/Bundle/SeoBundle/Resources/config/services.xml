<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="producer.manager.admin" class="WellCommerce\Bundle\SeoBundle\Manager\Admin\SeoManager">
            <argument type="service" id="flash_helper"/>
            <argument type="service" id="redirect_helper"/>
            <argument type="service" id="image_helper"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="doctrine_helper"/>
            <argument type="service" id="translator"/>
            <call method="setRepository">
                <argument type="service" id="producer.repository"/>
            </call>
            <call method="setFormBuilder">
                <argument type="service" id="producer.form_builder"/>
            </call>
            <call method="setDataGrid">
                <argument type="service" id="producer.datagrid"/>
            </call>
        </service>

        <service id="producer.controller.admin" class="WellCommerce\Bundle\SeoBundle\Controller\Admin\SeoController">
            <argument type="service" id="producer.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="producer.controller.front" class="WellCommerce\Bundle\SeoBundle\Controller\Front\SeoController">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="producer.repository" class="WellCommerce\Bundle\SeoBundle\Repository\SeoRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceSeoBundle:Seo</argument>
        </service>

        <service id="producer.dataset.query_builder" class="WellCommerce\Bundle\SeoBundle\DataSet\SeoDataSetQueryBuilder" public="false">
            <argument type="service" id="producer.repository"/>
        </service>

        <service id="producer.dataset.loader" class="%dataset.loader.class%">
            <argument type="service" id="producer.dataset.query_builder"/>
            <argument type="service" id="dataset.processor"/>
        </service>

        <service id="producer.dataset" class="WellCommerce\Bundle\SeoBundle\DataSet\SeoDataSet">
            <argument key="identifier">producer</argument>
            <argument type="service" id="producer.dataset.loader"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="producer.collection" parent="dataset.collection_builder.factory">
            <argument type="service" id="producer.dataset"/>
        </service>

        <service id="producer.datagrid" class="WellCommerce\Bundle\SeoBundle\DataGrid\SeoDataGrid">
            <argument key="identifier">producer</argument>
            <argument type="service" id="producer.dataset"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="producer.form_builder" class="WellCommerce\Bundle\SeoBundle\Form\SeoFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="producer.subscriber" class="WellCommerce\Bundle\SeoBundle\EventListener\SeoSubscriber">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="producer.route.generator" class="WellCommerce\Bundle\SeoBundle\Routing\SeoRouteGenerator">
            <argument type="collection" key="defaults">
                <argument key="_controller">producer.controller.front:indexAction</argument>
                <argument key="page">1</argument>
                <argument key="sort">1</argument>
            </argument>
            <argument type="collection" key="requirements">
                <argument key="page">\d{1,10}</argument>
                <argument key="sort">asc|desc</argument>
            </argument>
            <tag name="route.generator" />
        </service>
    </services>
</container>
