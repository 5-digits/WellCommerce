<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="WellCommerce\Bundle\CatalogBundle\Entity\Category">
        <property name="translations">
            <constraint name="Valid">
                <option name="deep">true</option>
            </constraint>
        </property>
        <property name="hierarchy">
            <constraint name="NotBlank">
                <option name="message">category.hierarchy.not_blank</option>
            </constraint>
            <constraint name="NotNull">
                <option name="message">category.hierarchy.not_null</option>
            </constraint>
            <constraint name="GreaterThanOrEqual">
                <option name="value">0</option>
            </constraint>
        </property>
    </class>

    <class name="WellCommerce\Bundle\CatalogBundle\Entity\CategoryTranslation">
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">category_translation.name.not_blank</option>
            </constraint>
            <constraint name="NotNull">
                <option name="message">category_translation.name.not_null</option>
            </constraint>
        </property>
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">slug</option>
        </constraint>
        <property name="route">
            <constraint name="Valid">
                <option name="deep">true</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
