<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin.product_review.index" path="index">
        <default key="_controller">product_review.controller.admin:indexAction</default>
        <option key="require_admin_permission">product_review.index</option>
    </route>

    <route id="admin.product_review.grid" path="grid">
        <default key="_controller">product_review.controller.admin:gridAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">product_review.index</option>
    </route>

    <route id="admin.product_review.edit" path="edit/{id}">
        <default key="_controller">product_review.controller.admin:editAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">product_review.edit</option>
    </route>

    <route id="admin.product_review.delete" path="delete/{id}">
        <default key="_controller">product_review.controller.admin:deleteAction</default>
        <option key="expose">true</option>
        <option key="require_admin_permission">product_review.delete</option>
    </route>
</routes>
