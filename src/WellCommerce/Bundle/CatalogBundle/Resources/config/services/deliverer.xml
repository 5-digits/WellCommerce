<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/deliverer.xml"/>
    </imports>

    <services>
        <service id="deliverer.repository" class="WellCommerce\Bundle\CatalogBundle\Repository\DelivererRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceCatalogBundle:Deliverer</argument>
        </service>

        <service id="deliverer.factory" class="WellCommerce\Bundle\CatalogBundle\Factory\DelivererFactory"/>

        <service id="deliverer.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher"/>
        </service>
    </services>
</container>
