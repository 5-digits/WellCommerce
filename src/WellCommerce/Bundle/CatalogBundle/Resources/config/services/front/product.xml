<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="product.manager.front" class="WellCommerce\Bundle\CatalogBundle\Manager\Front\ProductManager">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="product.event_dispatcher"/>
            <argument type="service" id="product.factory"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="product_layered_navigation.manager.front" class="WellCommerce\Bundle\CatalogBundle\Manager\Front\ProductLayeredNavigationManager">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="product.event_dispatcher"/>
            <argument type="service" id="product.factory"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="product_layered_navigation.helper" class="WellCommerce\Bundle\CatalogBundle\Helper\ProductLayeredNavigationHelper">
            <argument type="service" id="producer.repository"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        
        <service id="product.controller.front" class="WellCommerce\Bundle\CatalogBundle\Controller\Front\ProductController">
            <argument type="service" id="product.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="product_layered_navigation.controller.front" class="WellCommerce\Bundle\CatalogBundle\Controller\Front\ProductLayeredNavigationController">
            <argument type="service" id="product_layered_navigation.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="product.dataset.query_builder.front" class="WellCommerce\Bundle\CatalogBundle\DataSet\Front\ProductDataSetQueryBuilder" public="false">
            <argument type="service" id="product.repository"/>
            <call method="setRequestHelper">
                <argument type="service" id="request.helper"/>
            </call>
        </service>

        <service id="product.dataset.front" class="WellCommerce\Bundle\CatalogBundle\DataSet\Front\ProductDataSet">
            <argument type="service" id="product.dataset.query_builder.front"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="product.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="product.context.front" class="WellCommerce\Bundle\CatalogBundle\Context\Front\ProductContext"/>

        <service id="product_info.layout_box.controller" class="WellCommerce\Bundle\CatalogBundle\Controller\Box\ProductInfoBoxController">
            <argument type="service" id="product.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="layered_navigation.layout_box.controller" class="WellCommerce\Bundle\CatalogBundle\Controller\Box\ProductLayeredNavigationBoxController">
            <argument type="service" id="product.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
    </services>
</container>
