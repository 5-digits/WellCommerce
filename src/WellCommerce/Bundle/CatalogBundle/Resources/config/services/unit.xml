<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/unit.xml"/>
    </imports>

    <services>
        <service id="unit.repository" class="WellCommerce\Bundle\CatalogBundle\Repository\UnitRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceCatalogBundle:Unit</argument>
        </service>

        <service id="unit.factory" class="WellCommerce\Bundle\CatalogBundle\Factory\UnitFactory" />

        <service id="unit.event_dispatcher" class="WellCommerce\Bundle\CatalogBundle\EventDispatcher\UnitEventDispatcher">
            <argument type="service" id="event_dispatcher" />
        </service>
    </services>
</container>
