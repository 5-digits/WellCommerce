<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="plugin.class_metadata.event_subscriber" class="WellCommerce\Bundle\PluginBundle\EventListener\ClassMetadataEventSubscriber">
            <argument type="service" id="plugin.class_metadata.visitor_traverser"/>
            <tag name="doctrine.event_subscriber" connection="default" />
        </service>

        <service id="plugin.class_metadata.visitor_collection" class="WellCommerce\Bundle\PluginBundle\Visitor\ClassMetadata\ClassMetadataVisitorCollection"/>

        <service id="plugin.class_metadata.visitor_traverser" class="WellCommerce\Bundle\PluginBundle\Visitor\ClassMetadata\ClassMetadataVisitorTraverser">
            <argument type="service" id="plugin.class_metadata.visitor_collection"/>
        </service>

        <service id="plugin.entity_extra_generator.visitor_collection" class="WellCommerce\Bundle\PluginBundle\Visitor\EntityExtraGenerator\TraitGeneratorVisitorCollection"/>

        <service id="plugin.entity_extra_generator.visitor_traverser" class="WellCommerce\Bundle\PluginBundle\Visitor\EntityExtraGenerator\TraitGeneratorVisitorTraverser">
            <argument type="service" id="plugin.entity_extra_generator.visitor_collection"/>
        </service>
    </services>
</container>
