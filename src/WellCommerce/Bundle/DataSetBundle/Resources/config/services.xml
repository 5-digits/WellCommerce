<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="dataset.loader.class">WellCommerce\Bundle\DataSetBundle\Loader\DataSetLoader</parameter>
    </parameters>

    <services>
        <service id="dataset.collection_builder.factory" class="WellCommerce\Bundle\DataSetBundle\CollectionBuilder\CollectionBuilderFactory"/>

        <service id="dataset.configurator" class="WellCommerce\Bundle\DataSetBundle\DataSetConfigurator">
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="dataset.processor" class="WellCommerce\Bundle\DataSetBundle\Processor\DataSetProcessor" />
    </services>
</container>
