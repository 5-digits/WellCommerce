<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/media.xml"/>
    </imports>

    <services>
        <service id="media.repository" class="WellCommerce\Bundle\AppBundle\Repository\MediaRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceAppBundle:Media</argument>
        </service>

        <service id="media.factory" class="WellCommerce\Bundle\AppBundle\Factory\MediaFactory" />

        <service id="media.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher"/>
        </service>


    </services>
</container>
