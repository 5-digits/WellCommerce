<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/news.xml"/>
        <import resource="front/news.xml"/>
    </imports>

    <services>
        <service id="news.repository" class="WellCommerce\Bundle\AppBundle\Repository\NewsRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceAppBundle:News</argument>
        </service>

        <service id="news.factory" class="WellCommerce\Bundle\AppBundle\Factory\NewsFactory" />

        <service id="news.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher" />
        </service>
    </services>
</container>
