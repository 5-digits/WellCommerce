<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/category.xml"/>
        <import resource="front/category.xml"/>
    </imports>

    <services>
        <service id="category.repository" class="WellCommerce\Bundle\CategoryBundle\Repository\CategoryRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceCategoryBundle:Category</argument>
        </service>

        <service id="category.factory" class="WellCommerce\Bundle\CategoryBundle\Factory\CategoryFactory" />

        <service id="category.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="category.route.generator" class="WellCommerce\Bundle\CategoryBundle\Generator\CategoryRouteGenerator">
            <argument type="collection" key="defaults">
                <argument key="_controller">category.controller.front:indexAction</argument>
                <argument key="limit">12</argument>
                <argument key="page">1</argument>
                <argument key="orderBy">name</argument>
                <argument key="orderDir">asc</argument>
                <argument key="priceFrom">0</argument>
                <argument key="priceTo">9999</argument>
                <argument key="view">grid</argument>
                <argument key="producers">null</argument>
                <argument key="attributes">null</argument>
            </argument>
            <argument type="collection" key="requirements">
                <argument key="limit">\d{1,10}</argument>
                <argument key="page">\d{1,10}</argument>
                <argument key="orderBy">name|finalPrice</argument>
                <argument key="orderDir">asc|desc</argument>
                <argument key="priceFrom">\d{1,10}</argument>
                <argument key="priceTo">\d{1,10}</argument>
                <argument key="view">grid|list</argument>
                <argument key="producers">[\d+_]+</argument>
                <argument key="attributes">[\d+_]+</argument>
            </argument>
            <argument type="collection" key="pattern">
                <argument key="page" />
                <argument key="limit" />
                <argument key="orderBy" />
                <argument key="orderDir" />
                <argument key="priceFrom" />
                <argument key="priceTo" />
                <argument key="view" />
                <argument key="producers" />
                <argument key="attributes" />
            </argument>
            <tag name="route.generator" />
        </service>

        <service id="category.request_param_converter" class="WellCommerce\Bundle\CategoryBundle\Request\ParamConverter\CategoryParamConverter">
            <argument type="service" id="category.repository" />
            <argument>id</argument>
            <argument type="collection">
                <argument>WellCommerce\Bundle\CategoryBundle\Entity\Category</argument>
                <argument>WellCommerce\Bundle\CategoryBundle\Entity\CategoryInterface</argument>
            </argument>
            <tag name="request.param_converter" converter="category" priority="0"/>
        </service>

        <service id="twig.extension.category" class="WellCommerce\Bundle\CategoryBundle\Twig\Extension\CategoryExtension">
            <argument type="service" id="category.dataset.front"/>
            <tag name="twig.extension"/>
        </service>
    </services>
</container>
