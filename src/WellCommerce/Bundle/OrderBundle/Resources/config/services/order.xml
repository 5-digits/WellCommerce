<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="order.manager.admin" class="WellCommerce\Bundle\OrderBundle\Manager\Admin\OrderManager">
            <argument type="service" id="order.repository"/>
            <argument type="service" id="order.event_dispatcher"/>
            <argument type="service" id="order.factory"/>
            <argument type="service" id="order.form_builder"/>
            <argument type="service" id="order.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="order.controller.admin" class="WellCommerce\Bundle\OrderBundle\Controller\Admin\OrderController">
            <argument type="service" id="order.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="order.manager.front" class="WellCommerce\Bundle\OrderBundle\Manager\Front\OrderManager">
            <argument type="service" id="order.repository"/>
            <argument type="service" id="order.event_dispatcher"/>
            <argument type="service" id="order.factory"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="order_address.manager.front" class="WellCommerce\Bundle\OrderBundle\Manager\Front\OrderAddressManager">
            <argument type="service" id="order.repository"/>
            <argument type="service" id="order.event_dispatcher"/>
            <argument type="service" id="order.factory"/>
            <argument type="service" id="order_address.form_builder"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="order_confirmation.manager.front" class="WellCommerce\Bundle\OrderBundle\Manager\Front\OrderConfirmationManager">
            <argument type="service" id="order.repository"/>
            <argument type="service" id="order.event_dispatcher"/>
            <argument type="service" id="order.factory"/>
            <argument type="service" id="order_confirmation.form_builder"/>
            <call method="setCartManager">
                <argument type="service" id="cart.manager.front"/>
            </call>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="order_address.controller.front" class="WellCommerce\Bundle\OrderBundle\Controller\Front\OrderAddressController">
            <argument type="service" id="order_address.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="order_confirmation.controller.front" class="WellCommerce\Bundle\OrderBundle\Controller\Front\OrderConfirmationController">
            <argument type="service" id="order_confirmation.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="order.repository" class="WellCommerce\Bundle\OrderBundle\Repository\OrderRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceOrderBundle:Order</argument>
        </service>

        <service id="order.factory" class="WellCommerce\Bundle\OrderBundle\Factory\OrderFactory">
            <argument type="service" id="currency.helper"/>
            <argument type="service" id="order_product.factory"/>
        </service>

        <service id="order_product.factory" class="WellCommerce\Bundle\OrderBundle\Factory\OrderProductFactory"/>

        <service id="order_total_detail.factory" class="WellCommerce\Bundle\OrderBundle\Factory\OrderTotalDetailFactory"/>

        <service id="order.event_dispatcher" class="WellCommerce\Bundle\OrderBundle\EventDispatcher\OrderEventDispatcher">
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="order.form_builder" class="WellCommerce\Bundle\OrderBundle\Form\Admin\OrderFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="order.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="order_confirmation.form_builder" class="WellCommerce\Bundle\OrderBundle\Form\Front\OrderConfirmationFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="order.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="order_address.form_builder" class="WellCommerce\Bundle\OrderBundle\Form\Front\OrderAddressFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="order.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="order.dataset.query_builder" class="WellCommerce\Bundle\OrderBundle\DataSet\OrderDataSetQueryBuilder" public="false">
            <argument type="service" id="order.repository"/>
        </service>

        <service id="order.dataset" class="WellCommerce\Bundle\OrderBundle\DataSet\OrderDataSet">
            <argument type="service" id="order.dataset.query_builder"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="order.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="order.datagrid" class="WellCommerce\Bundle\OrderBundle\DataGrid\OrderDataGrid">
            <argument key="identifier">orders</argument>
            <argument type="service" id="order.dataset"/>
            <argument type="service" id="order.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="order.visitor.collection" class="WellCommerce\Bundle\OrderBundle\Visitor\OrderVisitorCollection"/>

        <service id="order.visitor.traverser" class="WellCommerce\Bundle\OrderBundle\Visitor\OrderVisitorTraverser">
            <argument type="service" id="order.visitor.collection"/>
        </service>

        <service id="order_cart_total.visitor" class="WellCommerce\Bundle\OrderBundle\Collector\OrderCartTotalCollector">
            <argument type="service" id="order_total_detail.factory"/>
            <argument type="service" id="currency.helper"/>
            <tag name="order.visitor"/>
        </service>

        <service id="order_shipping_cost.visitor" class="WellCommerce\Bundle\OrderBundle\Collector\OrderShippingCostCollector">
            <argument type="service" id="order_total_detail.factory"/>
            <argument type="service" id="currency.helper"/>
            <tag name="order.visitor"/>
        </service>

        <service id="order_payment_surcharge.visitor" class="WellCommerce\Bundle\OrderBundle\Collector\OrderPaymentSurchargeCollector">
            <argument type="service" id="order_total_detail.factory"/>
            <argument type="service" id="currency.helper"/>
            <tag name="order.visitor"/>
        </service>

        <service id="order_client_discount.visitor" class="WellCommerce\Bundle\OrderBundle\Collector\OrderClientDiscountCollector">
            <argument type="service" id="order_total_detail.factory"/>
            <argument type="service" id="currency.helper"/>
            <tag name="order.visitor"/>
        </service>

        <service id="order_coupon_discount.visitor" class="WellCommerce\Bundle\OrderBundle\Collector\OrderCouponDiscountCollector">
            <argument type="service" id="order_total_detail.factory"/>
            <argument type="service" id="currency.helper"/>
            <tag name="order.visitor"/>
        </service>

        <service id="order_total.visitor" class="WellCommerce\Bundle\OrderBundle\Collector\OrderTotalCollector">
            <argument type="service" id="order_total_detail.factory"/>
            <argument type="service" id="currency.helper"/>
            <tag name="order.visitor"/>
        </service>

        <service id="order.subscriber" class="WellCommerce\Bundle\OrderBundle\EventListener\OrderSubscriber">
            <argument type="service" id="order.visitor.traverser"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
