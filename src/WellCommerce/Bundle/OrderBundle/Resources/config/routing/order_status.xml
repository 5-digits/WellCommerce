<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin.order_status.index" path="/status/index">
        <default key="_controller">order_status.controller.admin:indexAction</default>
    </route>

    <route id="admin.order_status.grid" path="/status/grid">
        <default key="_controller">order_status.controller.admin:gridAction</default>
        <option key="expose">true</option>
    </route>

    <route id="admin.order_status.add" path="/status/add">
        <default key="_controller">order_status.controller.admin:addAction</default>
    </route>

    <route id="admin.order_status.edit" path="/status/edit/{id}">
        <default key="_controller">order_status.controller.admin:editAction</default>
        <option key="expose">true</option>
    </route>

    <route id="admin.order_status.delete" path="/status/delete/{id}">
        <default key="_controller">order_status.controller.admin:deleteAction</default>
        <option key="expose">true</option>
    </route>
</routes>
