<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/tax.xml"/>
    </imports>

    <services>
        <service id="tax.repository" class="WellCommerce\Bundle\TaxBundle\Repository\TaxRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceTaxBundle:Tax</argument>
        </service>

        <service id="tax.factory" class="WellCommerce\Bundle\TaxBundle\Factory\TaxFactory" />

        <service id="tax.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher" />
        </service>
    </services>
</container>
