<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="web.home_page.controller.front.class">WellCommerce\Bundle\WebBundle\Controller\Front\HomePageController</parameter>
        <parameter key="twig.extension.layout_box.class">WellCommerce\Bundle\WebBundle\Twig\Extension\LayoutBoxExtension</parameter>
    </parameters>

    <services>
        <service id="web.home_page.controller.front" class="%web.home_page.controller.front.class%">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <tag name="layout_page" alias="HomePage"/>
        </service>

        <service id="twig.extension.layout_box" class="%twig.extension.layout_box.class%">
            <argument type="service" id="layout.shop_theme"/>
            <tag name="twig.extension"/>
        </service>
    </services>
</container>
