<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

   <imports>
       <import resource="admin/coupon.xml"/>
       <import resource="front/coupon.xml"/>
   </imports>

    <services>
        <service id="coupon.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="coupon.request_param_converter" class="WellCommerce\Bundle\CouponBundle\Request\ParamConverter\CouponParamConverter">
            <argument type="service" id="coupon.repository" />
            <argument>code</argument>
            <argument type="collection">
                <argument>WellCommerce\Bundle\CouponBundle\Entity\Coupon</argument>
                <argument>WellCommerce\Bundle\CouponBundle\Entity\CouponInterface</argument>
            </argument>
            <tag name="request.param_converter" converter="category" priority="0"/>
        </service>

        <service id="coupon.checker" class="WellCommerce\Bundle\CouponBundle\Checker\CouponChecker">
            <argument type="service" id="order.repository"/>
        </service>

        <service id="coupon.order.visitor" class="WellCommerce\Bundle\CouponBundle\Visitor\CouponOrderVisitor">
            <argument type="service" id="order.modifier.provider"/>
            <argument type="service" id="currency.helper"/>
            <tag name="order.visitor" alias="coupon"/>
        </service>

        <service id="coupon_discount.order.modifier.configurator" class="WellCommerce\Bundle\OrderBundle\Configurator\OrderModifierConfigurator">
            <argument key="name">coupon_discount</argument>
            <argument key="description">order.label.coupon_discount</argument>
            <argument key="subtraction">true</argument>
            <argument key="hierarchy">100</argument>
        </service>

        <service id="coupon_discount.order.modifier" class="WellCommerce\Bundle\OrderBundle\Entity\OrderModifier">
            <factory service="order_modifier.factory" method="create" />
            <configurator service="coupon_discount.order.modifier.configurator" method="configure" />
            <tag name="order.modifier" alias="coupon_discount"/>
        </service>
    </services>
</container>
