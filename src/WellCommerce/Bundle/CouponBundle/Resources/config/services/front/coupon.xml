<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="coupon.manager.front" class="WellCommerce\Bundle\CouponBundle\Manager\Front\CouponManager">
            <argument type="service" id="coupon.repository"/>
            <argument type="service" id="coupon.event_dispatcher"/>
            <argument type="service" id="coupon.factory"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setCouponChecker">
                <argument type="service" id="coupon.checker"/>
            </call>
        </service>
        
        <service id="coupon.controller.front" class="WellCommerce\Bundle\CouponBundle\Controller\Front\CouponController">
            <argument type="service" id="coupon.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="coupon.cart.visitor" class="WellCommerce\Bundle\CouponBundle\Visitor\CouponCartVisitor">
            <argument type="service" id="cart_modifier.manager.front"/>
            <tag name="cart.visitor" alias="coupon"/>
        </service>

        <service id="coupon_discount.cart.modifier.configurator" class="WellCommerce\Bundle\CartBundle\Configurator\CartModifierConfigurator">
            <argument key="name">coupon_discount</argument>
            <argument key="description">cart.label.coupon_discount</argument>
            <argument key="subtraction">true</argument>
            <argument key="hierarchy">100</argument>
        </service>

        <service id="coupon_discount.cart.modifier" class="WellCommerce\Bundle\CartBundle\Entity\CartModifier">
            <factory service="cart_modifier.factory" method="create" />
            <configurator service="coupon_discount.cart.modifier.configurator" method="configure" />
            <tag name="cart.modifier" alias="coupon_discount"/>
        </service>
    </services>
</container>
