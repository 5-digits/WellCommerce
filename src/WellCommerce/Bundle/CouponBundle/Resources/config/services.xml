<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="coupon.manager.admin" class="WellCommerce\Bundle\CouponBundle\Manager\Admin\CouponManager">
            <argument type="service" id="coupon.repository"/>
            <argument type="service" id="coupon.event_dispatcher"/>
            <argument type="service" id="coupon.factory"/>
            <argument type="service" id="coupon.form_builder"/>
            <argument type="service" id="coupon.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="coupon.manager.front" class="WellCommerce\Bundle\CouponBundle\Manager\Front\CouponManager">
            <argument type="service" id="coupon.repository"/>
            <argument type="service" id="coupon.event_dispatcher"/>
            <argument type="service" id="coupon.factory"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        
        <service id="coupon.controller.admin" class="WellCommerce\Bundle\CouponBundle\Controller\Admin\CouponController">
            <argument type="service" id="coupon.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="coupon.controller.front" class="WellCommerce\Bundle\CouponBundle\Controller\Front\CouponController">
            <argument type="service" id="coupon.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="coupon.repository" class="WellCommerce\Bundle\CouponBundle\Repository\CouponRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceCouponBundle:Coupon</argument>
        </service>

        <service id="coupon.factory" class="WellCommerce\Bundle\CouponBundle\Factory\CouponFactory"/>

        <service id="coupon.event_dispatcher" class="WellCommerce\Bundle\CouponBundle\EventDispatcher\CouponEventDispatcher">
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="coupon.dataset.query_builder" class="WellCommerce\Bundle\CouponBundle\DataSet\CouponDataSetQueryBuilder" public="false">
            <argument type="service" id="coupon.repository"/>
        </service>

        <service id="coupon.dataset.loader" class="%dataset.loader.class%">
            <argument type="service" id="coupon.dataset.query_builder"/>
            <argument type="service" id="dataset.processor"/>
        </service>

        <service id="coupon.dataset" class="WellCommerce\Bundle\CouponBundle\DataSet\CouponDataSet">
            <argument key="identifier">coupon</argument>
            <argument type="service" id="coupon.dataset.loader"/>
            <argument type="service" id="coupon.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="coupon.datagrid" class="WellCommerce\Bundle\CouponBundle\DataGrid\CouponDataGrid">
            <argument key="identifier">coupon</argument>
            <argument type="service" id="coupon.dataset"/>
            <argument type="service" id="coupon.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="coupon.form_builder" class="WellCommerce\Bundle\CouponBundle\Form\CouponFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="coupon.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
