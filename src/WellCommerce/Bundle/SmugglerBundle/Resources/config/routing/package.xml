<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin.package.index" path="/index">
        <default key="_controller">package.controller.admin:indexAction</default>
    </route>

    <route id="admin.package.grid" path="/grid">
        <default key="_controller">package.controller.admin:gridAction</default>
        <option key="expose">true</option>
    </route>

    <route id="admin.package.add" path="/add">
        <default key="_controller">package.controller.admin:addAction</default>
    </route>

    <route id="admin.package.edit" path="/edit/{id}">
        <default key="_controller">package.controller.admin:editAction</default>
        <option key="expose">true</option>
    </route>

    <route id="admin.package.install" path="/install/{id},{operation}">
        <default key="_controller">package.controller.admin:installAction</default>
        <option key="expose">true</option>
    </route>

    <route id="admin.package.sync" path="/sync">
        <default key="_controller">package.controller.admin:syncAction</default>
        <option key="expose">true</option>
    </route>

    <route id="admin.package.delete" path="/delete/{id}">
        <default key="_controller">package.controller.admin:deleteAction</default>
        <option key="expose">true</option>
    </route>

    <route id="admin.package.console" path="/console/{id},{port},{operation}">
        <default key="_controller">package.controller.admin:consoleAction</default>
        <option key="expose">true</option>
    </route>
</routes>
