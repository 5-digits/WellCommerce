{% trans_default_domain "wellcommerce" %}
{% import "WellCommerceFormBundle:Front/Common:macros.html.twig" as macros %}
<div class="well-form mbt60">
    <h4>{% trans %}client.heading.contact_details{% endtrans %}<small>{% trans %}form.help.required_fields{% endtrans %}</small></h4>

    {% include 'WellCommerceWebBundle:Front/Common:flashes.html.twig' %}

    {{ macros.form_begin(form, 'form-horizontal') }}

        {{ macros.element(form.getChildren().get('phone')) }}

        {{ macros.element(form.getChildren().get('secondaryPhone')) }}

        {{ macros.element(form.getChildren().get('email')) }}

        <div class="row mtp20">
            <div class="col-lg-5 col-lg-offset-3">
                <button type="submit" class="btn btn-primary">{% trans %}form.button.save{% endtrans %}</button>
            </div>
        </div>
    {{ macros.form_end(form) }}
</div>

<div class="well-form">
    <h4>Change password<small>*Requested fields</small></h4>

    <form class="form-horizontal">
        <div class="form-group requested">
            <label class="col-lg-3 text-right" for="">Password</label>
            <div class="col-lg-5">
                <input type="password" class="form-control" />
            </div>
        </div>

        <div class="form-group requested">
            <label class="col-lg-3 text-right" for="">Repeat password</label>
            <div class="col-lg-5">
                <input type="password" class="form-control" />
            </div>
        </div>

        <div class="row mtp20">
            <div class="col-lg-5 col-lg-offset-3">
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </form>
</div>
