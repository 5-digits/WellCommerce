<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="front.client.login" path="/login">
        <default key="_controller">client.controller.front:loginAction</default>
        <option key="allow_page_redirect">true</option>
    </route>

    <route id="front.client.password" path="/password">
        <default key="_controller">client.controller.front:passwordAction</default>
        <option key="allow_page_redirect">true</option>
    </route>

    <route id="front.client.register" path="/register">
        <default key="_controller">client.controller.front:registerAction</default>
        <option key="allow_page_redirect">true</option>
    </route>

    <route id="front.client.settings" path="/settings">
        <default key="_controller">client.controller.front:settingsAction</default>
        <option key="allow_page_redirect">true</option>
    </route>

    <route id="front.client.orders" path="/orders">
        <default key="_controller">client.controller.front:ordersAction</default>
        <option key="allow_page_redirect">true</option>
    </route>

    <route id="front.client.wishlist" path="/wishlist">
        <default key="_controller">client.controller.front:wishlistAction</default>
        <option key="allow_page_redirect">true</option>
    </route>

    <route id="front.client.address_book" path="/addresses">
        <default key="_controller">client.controller.front:addressBookAction</default>
        <option key="allow_page_redirect">true</option>
    </route>

    <route id="front.client.login_check" path="/login_check" />

    <route id="front.client.logout" path="/logout" />
</routes>
