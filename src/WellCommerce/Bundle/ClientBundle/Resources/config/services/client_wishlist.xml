<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="front/client_wishlist.xml"/>
    </imports>

    <services>
        <service id="client_wishlist.repository" class="WellCommerce\Bundle\ClientBundle\Repository\ClientWishlistRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceClientBundle:ClientWishlist</argument>
        </service>

        <service id="client_wishlist.factory" class="WellCommerce\Bundle\ClientBundle\Factory\ClientWishlistFactory" />

        <service id="client_wishlist.event_dispatcher" class="WellCommerce\Bundle\ClientBundle\EventDispatcher\ClientWishlistEventDispatcher">
            <argument type="service" id="event_dispatcher"/>
        </service>
    </services>
</container>
