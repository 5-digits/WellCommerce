<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="front/wishlist.xml"/>
    </imports>

    <services>
        <service id="wishlist.repository" class="WellCommerce\Bundle\WishlistBundle\Repository\WishlistRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceWishlistBundle:Wishlist</argument>
        </service>

        <service id="wishlist.factory" class="WellCommerce\Bundle\WishlistBundle\Factory\WishlistFactory" />

        <service id="wishlist.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher"/>
        </service>
    </services>
</container>
