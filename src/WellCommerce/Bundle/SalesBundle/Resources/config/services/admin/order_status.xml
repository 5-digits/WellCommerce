<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="order_status.manager.admin" class="WellCommerce\Bundle\SalesBundle\Manager\Admin\OrderStatusManager">
            <argument type="service" id="order_status.repository"/>
            <argument type="service" id="order_status.event_dispatcher"/>
            <argument type="service" id="order_status.factory"/>
            <argument type="service" id="order_status.form_builder.admin"/>
            <argument type="service" id="order_status.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="order_status.controller.admin" class="WellCommerce\Bundle\SalesBundle\Controller\Admin\OrderStatusController">
            <argument type="service" id="order_status.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="order_status.dataset.query_builder.admin" class="WellCommerce\Bundle\SalesBundle\DataSet\Admin\OrderStatusDataSetQueryBuilder" public="false">
            <argument type="service" id="order_status.repository"/>
        </service>

        <service id="order_status.dataset.admin" class="WellCommerce\Bundle\SalesBundle\DataSet\Admin\OrderStatusDataSet">
            <argument type="service" id="order_status.dataset.query_builder.admin"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="order_status.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="order_status.datagrid" class="WellCommerce\Bundle\SalesBundle\DataGrid\OrderStatusDataGrid">
            <argument key="identifier">order_status</argument>
            <argument type="service" id="order_status.dataset.admin"/>
            <argument type="service" id="order_status.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="order_status.form_builder.admin" class="WellCommerce\Bundle\SalesBundle\Form\Admin\OrderStatusFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="order_status.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
