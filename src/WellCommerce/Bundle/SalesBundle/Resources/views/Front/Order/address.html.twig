{% extends 'WellCommerceWebBundle:Front:layout.html.twig' %}
{% trans_default_domain "wellcommerce" %}
{% import "WellCommerceFormBundle:Front/Common:macros.html.twig" as macros %}
{% block content %}
    {% include 'WellCommerceWebBundle:Front:breadcrumbs.html.twig' %}
    <div class="row">
        <div class="col-lg-9">
            {{ macros.form_begin(form, 'cart-address') }}
            <div class="well-form">
                <h4>{% trans %}client.label.billing_address{% endtrans %}</h4>

                    <div class="row">
                        <div class="col-lg-6">
                            {{ macros.element(form.getChildren().get('billingAddress').getChildren().get('billingAddress.firstName')) }}
                        </div>
                        <div class="col-lg-6">
                            {{ macros.element(form.getChildren().get('billingAddress').getChildren().get('billingAddress.lastName')) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            {{ macros.element(form.getChildren().get('billingAddress').getChildren().get('billingAddress.street')) }}
                        </div>
                        <div class="col-lg-3">
                            {{ macros.element(form.getChildren().get('billingAddress').getChildren().get('billingAddress.streetNo')) }}
                        </div>

                        <div class="col-lg-3">
                            {{ macros.element(form.getChildren().get('billingAddress').getChildren().get('billingAddress.flatNo')) }}
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-lg-6">
                            {{ macros.element(form.getChildren().get('billingAddress').getChildren().get('billingAddress.city')) }}
                        </div>
                        <div class="col-lg-3">
                            {{ macros.element(form.getChildren().get('billingAddress').getChildren().get('billingAddress.postCode')) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            {{ macros.element(form.getChildren().get('billingAddress').getChildren().get('billingAddress.country')) }}
                        </div>
                    </div>

                    <div class="collapse in" id="shipping-wrap">
                        <h4>{% trans %}client.label.shipping_address{% endtrans %}</h4>

                        <div class="row">
                            <div class="col-lg-6">
                                {{ macros.element(form.getChildren().get('shippingAddress').getChildren().get('shippingAddress.firstName')) }}
                            </div>
                            <div class="col-lg-6">
                                {{ macros.element(form.getChildren().get('shippingAddress').getChildren().get('shippingAddress.lastName')) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                {{ macros.element(form.getChildren().get('shippingAddress').getChildren().get('shippingAddress.street')) }}
                            </div>
                            <div class="col-lg-3">
                                {{ macros.element(form.getChildren().get('shippingAddress').getChildren().get('shippingAddress.streetNo')) }}
                            </div>

                            <div class="col-lg-3">
                                {{ macros.element(form.getChildren().get('shippingAddress').getChildren().get('shippingAddress.flatNo')) }}
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-lg-6">
                                {{ macros.element(form.getChildren().get('shippingAddress').getChildren().get('shippingAddress.city')) }}
                            </div>
                            <div class="col-lg-3">
                                {{ macros.element(form.getChildren().get('shippingAddress').getChildren().get('shippingAddress.postCode')) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                {{ macros.element(form.getChildren().get('shippingAddress').getChildren().get('shippingAddress.country')) }}
                            </div>
                        </div>
                    </div>

                    <h4 class="mtp30">{% trans %}client.label.contact_details{% endtrans %}</h4>

                    <div class="row">
                        <div class="col-lg-6">
                            {{ macros.element(form.getChildren().get('contactDetails').getChildren().get('contactDetails.phone')) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            {{ macros.element(form.getChildren().get('contactDetails').getChildren().get('contactDetails.secondaryPhone')) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            {{ macros.element(form.getChildren().get('contactDetails').getChildren().get('contactDetails.email')) }}
                        </div>
                    </div>
            </div>

            <div class="clearfix mtp60">
                <a href="{{ path('front.home_page.index') }}" class="btn btn-link light btn-lg notransform nopadding">Back to shopping</a>
                <button class="btn btn-primary btn-lg pull-right">{% trans %}cart.button.confirm_order{% endtrans %}</button>
            </div>

            {{ macros.form_end(form) }}
        </div>

        <div class="col-lg-3">
            {% include 'WellCommerceCmsBundle:Front/Common:sidebar_contact.html.twig' %}
        </div>
    </div>
{% endblock %}
