<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="WellCommerce\Bundle\CoreBundle\Entity\Price">
        <property name="netAmount">
            <constraint name="GreaterThanOrEqual">
                <option name="value">0</option>
            </constraint>
            <constraint name="NotBlank" />
        </property>
        <property name="grossAmount">
            <constraint name="GreaterThanOrEqual">
                <option name="value">0</option>
            </constraint>
            <constraint name="NotBlank" />
        </property>
        <property name="currency">
            <constraint name="Currency" />
        </property>
    </class>

    <class name="WellCommerce\Bundle\CoreBundle\Entity\Dimension">
        <property name="width">
            <constraint name="GreaterThanOrEqual">
                <option name="value">0</option>
            </constraint>
            <constraint name="NotBlank" />
        </property>
        <property name="height">
            <constraint name="GreaterThanOrEqual">
                <option name="value">0</option>
            </constraint>
            <constraint name="NotBlank" />
        </property>
        <property name="depth">
            <constraint name="GreaterThanOrEqual">
                <option name="value">0</option>
            </constraint>
            <constraint name="NotBlank" />
        </property>
    </class>

    <class name="WellCommerce\Bundle\CoreBundle\Entity\ContactDetails">
        <property name="phone">
            <constraint name="NotNull">
                <option name="groups">
                    <value>registration</value>
                    <value>client_settings</value>
                    <value>order_contact_details</value>
                </option>
            </constraint>
            <constraint name="NotBlank">
                <option name="groups">
                    <value>registration</value>
                    <value>client_settings</value>
                    <value>order_contact_details</value>
                </option>
            </constraint>
        </property>
        <property name="secondaryPhone">
            <constraint name="NotNull">
                <option name="groups">
                    <value>client_settings</value>
                    <value>order_contact_details</value>
                </option>
            </constraint>
            <constraint name="NotBlank" />
        </property>
        <property name="email">
            <constraint name="NotNull">
                <option name="groups">
                    <value>registration</value>
                    <value>contact_details</value>
                    <value>order_contact_details</value>
                </option>
            </constraint>
            <constraint name="NotBlank">
                <option name="groups">
                    <value>registration</value>
                    <value>client_settings</value>
                    <value>order_contact_details</value>
                </option>
            </constraint>
            <constraint name="Email">
                <option name="groups">
                    <value>registration</value>
                    <value>client_settings</value>
                    <value>order_contact_details</value>
                </option>
            </constraint>
        </property>
    </class>

    <class name="WellCommerce\Bundle\CoreBundle\Entity\Address">
        <property name="firstName">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>client_registration</value>
                    <value>address</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>client_registration</value>
                    <value>address</value>
                </option>
            </constraint>
        </property>
        <property name="lastName">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>registration</value>
                    <value>address</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>address</value>
                </option>
            </constraint>
        </property>
        <property name="street">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>address</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>address</value>
                </option>
            </constraint>
        </property>
        <property name="streetNo">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>address</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>address</value>
                </option>
            </constraint>
        </property>
        <property name="flatNo">
            <constraint name="NotNull">
                <option name="groups">
                    <value>address</value>
                </option>
            </constraint>
        </property>
        <property name="postCode">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>address</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>address</value>
                </option>
            </constraint>
        </property>
        <property name="city">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>address</value>
                </option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>address</value>
                </option>
            </constraint>
        </property>
        <property name="country">
            <constraint name="Country">
                <option name="groups">
                    <value>address</value>
                </option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
