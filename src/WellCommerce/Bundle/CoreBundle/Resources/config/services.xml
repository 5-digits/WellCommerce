<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="services/helpers.xml"/>
        <import resource="services/twig.xml"/>
        <import resource="services/datagrid.xml"/>
        <import resource="services/form.xml"/>
    </imports>

    <services>
        <service id="doctrine.orm.timestampable.subscriber" class="WellCommerce\Bundle\CoreBundle\Doctrine\ORM\Behaviours\Timestampable\TimestampableSubscriber">
            <tag name="doctrine.event_subscriber" />
        </service>

        <service id="dataset.column.collection" class="WellCommerce\Bundle\CoreBundle\DataSet\Column\ColumnCollection"/>

        <service id="dataset.collection_builder.factory" class="WellCommerce\Bundle\CoreBundle\DataSet\CollectionBuilder\CollectionBuilderFactory"/>

        <service id="resource.provider.collection" class="WellCommerce\Bundle\CoreBundle\Provider\ProviderCollection"/>
    </services>
</container>
