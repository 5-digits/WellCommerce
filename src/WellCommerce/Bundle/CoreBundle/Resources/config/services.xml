<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="wellcommerce.twig.extension.form" class="WellCommerce\Bundle\CoreBundle\Twig\Extension\FormExtension">
            <argument type="service" id="service_container"/>
            <tag name="twig.extension"/>
        </service>

        <service id="wellcommerce.form.type.product_select" class="WellCommerce\Bundle\CoreBundle\Form\Type\ProductSelectType">
            <tag name="form.type" alias="product_select"/>
        </service>
    </services>

