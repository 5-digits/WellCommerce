<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/contact.xml"/>
        <import resource="front/contact.xml"/>
    </imports>

    <services>
        <service id="contact.repository" class="WellCommerce\Bundle\CmsBundle\Repository\ContactRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceCmsBundle:Contact</argument>
        </service>

        <service id="contact.factory" class="WellCommerce\Bundle\CmsBundle\Factory\ContactFactory" />

        <service id="contact.event_dispatcher" class="WellCommerce\Bundle\CmsBundle\EventDispatcher\ContactEventDispatcher">
            <argument type="service" id="event_dispatcher" />
        </service>
    </services>
</container>
