<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="news.dataset.query_builder.front" class="WellCommerce\Bundle\CmsBundle\DataSet\Front\NewsDataSetQueryBuilder" public="false">
            <argument type="service" id="news.repository"/>
        </service>

        <service id="news.dataset.front" class="WellCommerce\Bundle\CmsBundle\DataSet\Front\NewsDataSet">
            <argument type="service" id="news.dataset.query_builder.front"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="news.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="news.provider.front" class="WellCommerce\Bundle\CmsBundle\Provider\Front\NewsProvider">
            <argument type="service" id="contact.dataset.front"/>
            <tag name="provider" alias="news.front"/>
        </service>
    </services>
</container>
