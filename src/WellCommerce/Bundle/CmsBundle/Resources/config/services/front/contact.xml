<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="contact.layout_box.controller" class="WellCommerce\Bundle\CmsBundle\Controller\Box\ContactBoxController">
            <argument type="service" id="service_container"/>
            <argument type="service" id="contact.repository"/>
        </service>

        <service id="contact.dataset.query_builder.front" class="WellCommerce\Bundle\CmsBundle\DataSet\Front\ContactDataSetQueryBuilder" public="false">
            <argument type="service" id="contact.repository"/>
        </service>

        <service id="contact.dataset.front" class="WellCommerce\Bundle\CmsBundle\DataSet\Front\ContactDataSet">
            <argument type="service" id="contact.dataset.query_builder.front"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="contact.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="contact.form_builder.front" class="WellCommerce\Bundle\CmsBundle\Form\Front\ContactFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="contact.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="contact.context.front" class="WellCommerce\Bundle\CmsBundle\Context\Front\ContactContext"/>
    </services>
</container>
