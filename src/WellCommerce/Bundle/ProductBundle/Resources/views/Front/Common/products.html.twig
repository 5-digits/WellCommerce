{% trans_default_domain "wellcommerce" %}

<div class="products-grid">
    <div class="row">
        {% for item in dataset.rows %}
        <div class="col-lg-3">
            <div class="thumbnail">
                <div class="body">
                    <a href="{{ item.route }}" class="photo">
                        <img src="{{ image(item.photo, 'normal') }}" alt="{{ item.name }}" />
                    </a>

                    <a href="{{ item.route }}" class="caption">
                        <div class="labels">
                            {% for status in item.status %}
                                <span class="label {{ status.css_class }}">{{ status.name }}</span>
                            {% endfor %}
                        </div>
                        {% if item.isDiscountValid == 1 %}
                            <span class="price promo"><small>{{ format_price(item.price, item.currency, null, item.tax) }}</small>{{ format_price(item.discountedPrice, item.currency, null, item.tax) }}</span>
                        {% else %}
                            <span class="price">{{ format_price(item.price, item.currency, null, item.tax) }}</span>
                        {% endif %}
                        <span class="name">{{ item.name }}</span>
                    </a>

                    <a href="{{ path('front.cart.add') }}" class="btn btn-primary text-left add-cart" data-id="{{ item.id }}" data-qty="1" data-attribute="0">
                        {% trans %}cart.button.add{% endtrans %}
                        <i class="pull-right"><img src="{{ asset('themes/wellcommerce/assets/img/add-to-cart.png') }}"></i>
                    </a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
