<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/product_status.xml"/>
        <import resource="front/product_status.xml"/>
    </imports>

    <services>
        <service id="product_status.repository" class="WellCommerce\Bundle\ProductBundle\Repository\ProductStatusRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceProductBundle:ProductStatus</argument>
        </service>

        <service id="product_status.factory" class="WellCommerce\Bundle\ProductBundle\Factory\ProductStatusFactory" />

        <service id="product_status.event_dispatcher" class="WellCommerce\Bundle\ProductBundle\EventDispatcher\ProductStatusEventDispatcher">
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="product_status.request_param_converter" class="WellCommerce\Bundle\ProductBundle\Request\ParamConverter\ProductStatusParamConverter">
            <argument type="service" id="product_status.repository" />
            <argument>id</argument>
            <argument type="collection">
                <argument>WellCommerce\Bundle\ProductBundle\Entity\ProductStatus</argument>
                <argument>WellCommerce\Bundle\ProductBundle\Entity\ProductStatusInterface</argument>
            </argument>
            <tag name="request.param_converter" converter="product" priority="0"/>
        </service>

        <service id="product_status.transformer" class="WellCommerce\Bundle\ProductBundle\DataSet\Transformer\ProductStatusTransformer">
            <tag name="dataset.transformer" alias="product_status"/>
        </service>

        <service id="twig.extension.product_status" class="WellCommerce\Bundle\ProductBundle\Twig\Extension\ProductStatusExtension">
            <argument type="service" id="product_status.dataset.front"/>
            <tag name="twig.extension"/>
        </service>

        <service id="product_status.route.generator" class="WellCommerce\Bundle\ProductBundle\Routing\ProductStatusRouteGenerator">
            <argument type="collection" key="defaults">
                <argument key="_controller">product_status.controller.front:indexAction</argument>
                <argument key="page">1</argument>
                <argument key="orderBy">null</argument>
                <argument key="orderDir">null</argument>
            </argument>
            <argument type="collection" key="requirements">
                <argument key="page">\d{1,10}</argument>
                <argument key="orderDir">asc|desc</argument>
            </argument>
            <tag name="route.generator" />
        </service>
    </services>
</container>
