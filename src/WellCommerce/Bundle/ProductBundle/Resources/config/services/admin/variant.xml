<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="variant.manager.admin" class="WellCommerce\Bundle\ProductBundle\Manager\Admin\VariantManager">
            <argument type="service" id="variant.repository"/>
            <argument type="service" id="variant.event_dispatcher"/>
            <argument type="service" id="variant.factory"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
    </services>
</container>
