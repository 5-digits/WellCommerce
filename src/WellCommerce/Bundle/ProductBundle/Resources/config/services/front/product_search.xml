<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="product_search.manager.front" class="WellCommerce\Bundle\ProductBundle\Manager\Front\ProductSearchManager">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="product_search.event_dispatcher"/>
            <call method="setProductSearchProvider">
                <argument type="service" id="product_search.provider.lucene"/>
            </call>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="product_search.controller.front" class="WellCommerce\Bundle\ProductBundle\Controller\Front\ProductSearchController">
            <argument type="service" id="product_search.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="product_search.layout_box.controller" class="WellCommerce\Bundle\ProductBundle\Controller\Box\ProductSearchBoxController">
            <argument type="service" id="product_search.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
    </services>
</container>
