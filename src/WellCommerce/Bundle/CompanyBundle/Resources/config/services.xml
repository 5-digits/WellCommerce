<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="company.manager.admin" class="WellCommerce\Bundle\CompanyBundle\Manager\Admin\CompanyManager">
            <argument type="service" id="flash_helper"/>
            <argument type="service" id="redirect_helper"/>
            <argument type="service" id="image_helper"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <argument type="service" id="translator"/>
            <call method="setRepository">
                <argument type="service" id="company.repository"/>
            </call>
            <call method="setForm">
                <argument type="service" id="company.form"/>
            </call>
            <call method="setDataGrid">
                <argument type="service" id="company.datagrid"/>
            </call>
        </service>
        
        <service id="company.controller.admin" class="WellCommerce\Bundle\CompanyBundle\Controller\Admin\CompanyController">
            <argument type="service" id="company.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="company.repository" class="WellCommerce\Bundle\CompanyBundle\Repository\CompanyRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceCompanyBundle:Company</argument>
        </service>

        <service id="company.dataset.query_builder" class="WellCommerce\Bundle\CompanyBundle\DataSet\CompanyDataSetQueryBuilder" public="false">
            <argument type="service" id="company.repository"/>
        </service>

        <service id="company.dataset" class="WellCommerce\Bundle\CompanyBundle\DataSet\CompanyDataSet">
            <argument key="identifier">company</argument>
            <argument type="service" id="company.dataset.query_builder"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="company.datagrid" class="WellCommerce\Bundle\CompanyBundle\DataGrid\CompanyDataGrid">
            <argument key="identifier">company</argument>
            <argument type="service" id="company.dataset"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="company.form" class="WellCommerce\Bundle\CompanyBundle\Form\CompanyForm">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="company.subscriber" class="WellCommerce\Bundle\CompanyBundle\EventListener\CompanySubscriber">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setTranslator">
                <argument type="service" id="translator"/>
            </call>
            <call method="setRouter">
                <argument type="service" id="router"/>
            </call>
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
