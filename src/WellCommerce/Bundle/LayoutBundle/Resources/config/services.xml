<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="layout.templating_locator.class">WellCommerce\Bundle\LayoutBundle\Locator\TemplateLocator</parameter>
        <parameter key="layout.file_locator.class">WellCommerce\Bundle\LayoutBundle\Locator\FileLocator</parameter>
        <parameter key="layout.cache_warmer.class">WellCommerce\Bundle\LayoutBundle\CacheWarmer\TemplatePathsCacheWarmer</parameter>
        <parameter key="layout.listener.class">WellCommerce\Bundle\LayoutBundle\EventListener\LayoutListener</parameter>
        <parameter key="layout.shop_theme.class">WellCommerce\Bundle\LayoutBundle\Theme\ShopTheme</parameter>
        <parameter key="layout_box_type.repository.class">WellCommerce\Bundle\LayoutBundle\Repository\LayoutBoxTypeRepository</parameter>
        <parameter key="layout_manager.class">WellCommerce\Bundle\LayoutBundle\Manager\LayoutManager</parameter>
        <parameter key="layout_renderer.class">WellCommerce\Bundle\LayoutBundle\Manager\LayoutRenderer</parameter>
        <!-- themes -->
        <parameter key="layout_theme.controller.admin.class">WellCommerce\Bundle\LayoutBundle\Controller\Admin\LayoutThemeController</parameter>
        <parameter key="layout_theme.repository.class">WellCommerce\Bundle\LayoutBundle\Repository\LayoutThemeRepository</parameter>
        <parameter key="layout_theme.datagrid.class">WellCommerce\Bundle\LayoutBundle\DataGrid\LayoutThemeDataGrid</parameter>
        <parameter key="layout_theme.datagrid.configurator.class">WellCommerce\Bundle\LayoutBundle\DataGrid\LayoutThemeDataGridConfigurator</parameter>
        <parameter key="layout_theme.form.class">WellCommerce\Bundle\LayoutBundle\Form\LayoutThemeForm</parameter>
        <!-- pages -->
        <parameter key="layout_page.controller.admin.class">WellCommerce\Bundle\LayoutBundle\Controller\Admin\LayoutPageController</parameter>
        <parameter key="layout_page.repository.class">WellCommerce\Bundle\LayoutBundle\Repository\LayoutPageRepository</parameter>
        <parameter key="layout_page_column.repository.class">WellCommerce\Bundle\LayoutBundle\Repository\LayoutPageColumnRepository</parameter>
        <parameter key="layout_page.form.class">WellCommerce\Bundle\LayoutBundle\Form\LayoutPageForm</parameter>
        <parameter key="layout_page.tree.class">WellCommerce\Bundle\LayoutBundle\Form\LayoutPageTree</parameter>
        <!-- boxes -->
        <parameter key="layout_box.controller.admin.class">WellCommerce\Bundle\LayoutBundle\Controller\Admin\LayoutBoxController</parameter>
        <parameter key="layout_box.repository.class">WellCommerce\Bundle\LayoutBundle\Repository\LayoutBoxRepository</parameter>
        <parameter key="layout_box.datagrid.class">WellCommerce\Bundle\LayoutBundle\DataGrid\LayoutBoxDataGrid</parameter>
        <parameter key="layout_box.datagrid.configurator.class">WellCommerce\Bundle\LayoutBundle\DataGrid\LayoutBoxDataGridConfigurator</parameter>
        <parameter key="layout_box.form.class">WellCommerce\Bundle\LayoutBundle\Form\LayoutBoxForm</parameter>
    </parameters>

    <services>
        <service id="layout.shop_theme" class="%layout.shop_theme.class%">
            <argument type="service" id="kernel" />
        </service>

        <service id="layout.templating.cache_warmer.template_paths" class="%layout.cache_warmer.class%" public="false">
            <argument type="service" id="templating.finder" />
            <argument type="service" id="layout.templating_locator" />
        </service>

        <service id="layout.listener" class="%layout.listener.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="translator"/>
            <argument type="service" id="router"/>
            <argument type="service" id="layout.shop_theme"/>
            <argument type="service" id="annotation_reader"/>
            <argument type="service" id="layout_theme.repository"/>
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="layout.file_locator" class="%layout.file_locator.class%" public="false">
            <argument type="service" id="kernel" />
            <argument>%kernel.root_dir%/Resources</argument>
            <argument type="service" id="layout.shop_theme"/>
        </service>

        <service id="layout.templating_locator" class="%layout.templating_locator.class%" public="false">
            <argument type="service" id="layout.file_locator" />
            <argument>%kernel.cache_dir%</argument>
        </service>

        <service id="layout_theme.controller.admin" class="%layout_theme.controller.admin.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="admin_manager"/>
            <argument type="service" id="layout_theme.repository"/>
            <argument type="service" id="layout_theme.datagrid"/>
            <argument type="service" id="layout_theme.form"/>
        </service>

        <service id="layout_theme.repository" class="%layout_theme.repository.class%" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceLayoutBundle:LayoutTheme</argument>
            <call method="setRequest">
                <argument type="service" id="request_stack" />
            </call>
        </service>

        <service id="layout_theme.datagrid" class="%layout_theme.datagrid.class%">
            <configurator service="layout_theme.datagrid.configurator" method="configure" />
        </service>

        <service id="layout_theme.datagrid.configurator" class="%layout_theme.datagrid.configurator.class%">
            <argument key="identifier">Contact</argument>
            <argument type="service" id="datagrid_manager"/>
            <argument type="service" id="layout_theme.repository"/>
        </service>

        <service id="layout_theme.form" class="%layout_theme.form.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="layout_page.controller.admin" class="%layout_page.controller.admin.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="admin_manager"/>
            <argument type="service" id="layout_theme.repository"/>
            <argument>null</argument>
            <argument type="service" id="layout_theme.form"/>
        </service>

        <service id="layout_page.repository" class="%layout_page.repository.class%" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceLayoutBundle:LayoutPage</argument>
            <call method="setRequest">
                <argument type="service" id="request_stack" />
            </call>
        </service>

        <service id="layout_page_column.repository" class="%layout_page_column.repository.class%" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceLayoutBundle:LayoutPageColumn</argument>
            <call method="setRequest">
                <argument type="service" id="request_stack" />
            </call>
        </service>

        <service id="layout_page.form" class="%layout_page.form.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="layout_page.tree" class="%layout_page.tree.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="layout_box.controller.admin" class="%layout_box.controller.admin.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="admin_manager"/>
            <argument type="service" id="layout_box.repository"/>
            <argument type="service" id="layout_box.datagrid"/>
            <argument type="service" id="layout_box.form"/>
        </service>

        <service id="layout_box.repository" class="%layout_box.repository.class%" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceLayoutBundle:LayoutBox</argument>
            <call method="setRequest">
                <argument type="service" id="request_stack" />
            </call>
        </service>

        <service id="layout_box.datagrid" class="%layout_box.datagrid.class%">
            <configurator service="layout_box.datagrid.configurator" method="configure" />
        </service>

        <service id="layout_box.datagrid.configurator" class="%layout_box.datagrid.configurator.class%">
            <argument key="identifier">Contact</argument>
            <argument type="service" id="datagrid_manager"/>
            <argument type="service" id="layout_box.repository"/>
        </service>

        <service id="layout_box.form" class="%layout_box.form.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="layout_box_type.repository" class="%layout_box_type.repository.class%" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceLayoutBundle:LayoutBoxType</argument>
            <call method="setRequest">
                <argument type="service" id="request_stack" />
            </call>
        </service>

        <service id="layout_manager" class="%layout_manager.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="layout_renderer" class="%layout_renderer.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
