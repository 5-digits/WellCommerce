<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <!-- layout themes section -->

    <route id="admin.layout_theme.index" path="/theme/index">
        <default key="_controller">layout_theme.controller.admin:indexAction</default>
    </route>

    <route id="admin.layout_theme.grid" path="/theme/grid">
        <default key="_controller">layout_theme.controller.admin:gridAction</default>
        <option key="expose">true</option>
    </route>

    <route id="admin.layout_theme.add" path="/theme/add">
        <default key="_controller">layout_theme.controller.admin:addAction</default>
    </route>

    <route id="admin.layout_theme.edit" path="/theme/edit/{id}">
        <default key="_controller">layout_theme.controller.admin:editAction</default>
        <option key="expose">true</option>
    </route>
    <route id="admin.layout_theme.delete" path="/theme/delete/{id}">
        <default key="_controller">layout_theme.controller.admin:deleteAction</default>
        <option key="expose">true</option>
    </route>

    <!-- layout pages section -->

    <route id="admin.layout_page.index" path="/page/index">
        <default key="_controller">layout_page.controller.admin:indexAction</default>
    </route>

    <route id="admin.layout_page.edit" path="/theme/edit/{id}">
        <default key="_controller">layout_page.controller.admin:editAction</default>
        <option key="expose">true</option>
    </route>
</routes>
