<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="product_search.manager.front" class="WellCommerce\Bundle\AppBundle\Manager\Front\SearchManager">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="product_search.event_dispatcher"/>
            <call method="setSearchProvider">
                <argument type="service" id="product_search.provider"/>
            </call>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="product_search.dataset.query_builder.front" class="WellCommerce\Bundle\AppBundle\DataSet\Front\SearchDataSetQueryBuilder">
            <argument type="service" id="product.repository"/>
            <call method="setSearchProvider">
                <argument type="service" id="product_search.provider"/>
            </call>
            <call method="setRequestHelper">
                <argument type="service" id="request.helper"/>
            </call>
        </service>

        <service id="product_search.dataset.front" class="WellCommerce\Bundle\AppBundle\DataSet\Front\SearchDataSet">
            <argument type="service" id="product_search.dataset.query_builder.front"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="product.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="product_search.controller.front" class="WellCommerce\Bundle\AppBundle\Controller\Front\SearchController">
            <argument type="service" id="product_search.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="product_search.layout_box.controller" class="WellCommerce\Bundle\AppBundle\Controller\Box\SearchBoxController">
            <argument type="service" id="product_search.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
    </services>
</container>
