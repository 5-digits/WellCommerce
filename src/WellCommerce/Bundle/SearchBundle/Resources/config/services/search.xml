<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="search_index.manager.lucene" class="WellCommerce\Bundle\AppBundle\Manager\LuceneSearchIndexManager">
            <argument type="service" id="ivory_lucene_search"/>
            <argument type="service" id="kernel"/>
        </service>

        <service id="product_search.indexer.lucene" class="WellCommerce\Bundle\AppBundle\Indexer\LuceneProductIndexer">
            <argument type="service" id="search_index.manager.lucene"/>
            <argument type="service" id="product.repository"/>
        </service>

        <service id="product_search.provider.lucene" class="WellCommerce\Bundle\AppBundle\Provider\LuceneProductSearchProvider">
            <argument type="service" id="search_index.manager.lucene"/>
        </service>

        <service id="search.command.reindex.products" class="WellCommerce\Bundle\AppBundle\Command\ReindexProductsCommand">
            <tag name="console.command"/>
        </service>
    </services>
</container>
