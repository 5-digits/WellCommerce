<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="cart_address.manager.front" class="WellCommerce\Bundle\CartBundle\Manager\Front\CartAddressManager">
            <argument type="service" id="cart.repository"/>
            <argument type="service" id="cart.event_dispatcher"/>
            <argument>null</argument>
            <argument type="service" id="cart_address.form_builder"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="cart_address.controller.front" class="WellCommerce\Bundle\CartBundle\Controller\Front\CartAddressController">
            <argument type="service" id="cart_address.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="cart_address.form_builder" class="WellCommerce\Bundle\CartBundle\Form\Front\CartAddressFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="cart.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
