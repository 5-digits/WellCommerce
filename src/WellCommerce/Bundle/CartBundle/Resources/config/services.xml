<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="availability.controller.admin" class="WellCommerce\Bundle\CartBundle\Controller\Admin\CartController">
            <argument type="service" id="service_container"/>
            <argument type="service" id="admin_manager"/>
            <argument type="service" id="availability.repository"/>
            <argument type="service" id="availability.datagrid"/>
            <argument type="service" id="availability.form"/>
        </service>

        <service id="availability.repository" class="WellCommerce\Bundle\CartBundle\Repository\CartRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceCartBundle:Cart</argument>
        </service>

        <service id="availability.datagrid" class="WellCommerce\Bundle\CartBundle\DataGrid\CartDataGrid">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <configurator service="availability.datagrid.configurator" method="configure" />
        </service>

        <service id="availability.datagrid.configurator" class="WellCommerce\Bundle\CartBundle\DataGrid\CartDataGridConfigurator">
            <argument key="identifier">availability</argument>
            <argument type="service" id="datagrid_manager"/>
            <argument type="service" id="availability.repository"/>
        </service>

        <service id="availability.form" class="WellCommerce\Bundle\CartBundle\Form\CartForm">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="availability.subscriber" class="WellCommerce\Bundle\CartBundle\EventListener\CartSubscriber">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setTranslator">
                <argument type="service" id="translator"/>
            </call>
            <call method="setRouter">
                <argument type="service" id="router"/>
            </call>
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
