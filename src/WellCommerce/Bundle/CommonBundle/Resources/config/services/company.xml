<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/company.xml"/>
    </imports>

    <services>
        <service id="company.repository" class="WellCommerce\Bundle\CommonBundle\Repository\CompanyRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceCommonBundle:Company</argument>
        </service>

        <service id="company.factory" class="WellCommerce\Bundle\CommonBundle\Factory\CompanyFactory" />

        <service id="company.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher" />
        </service>
    </services>
</container>
