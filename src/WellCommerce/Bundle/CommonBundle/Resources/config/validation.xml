<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="WellCommerce\Bundle\CommonBundle\Entity\Dictionary">
        <property name="translations">
            <constraint name="Valid">
                <option name="deep">true</option>
            </constraint>
        </property>
        <property name="identifier">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
        </property>
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">identifier</option>
        </constraint>
    </class>

    <class name="WellCommerce\Bundle\CommonBundle\Entity\DictionaryTranslation">
        <property name="value">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
        </property>
    </class>

    <class name="WellCommerce\Bundle\CommonBundle\Entity\Locale">
        <property name="code">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
        </property>
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">code</option>
        </constraint>
    </class>

    <class name="WellCommerce\Bundle\CommonBundle\Entity\Route">
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">path</option>
        </constraint>
    </class>

    <class name="WellCommerce\Bundle\CommonBundle\Entity\Tax">
        <property name="value">
            <constraint name="NotBlank">
                <option name="message">validation.tax.not_blank</option>
            </constraint>
            <constraint name="Range">
                <option name="min">0</option>
                <option name="max">100</option>
            </constraint>
        </property>
        <property name="translations">
            <constraint name="Valid">
                <option name="deep">true</option>
            </constraint>
        </property>
    </class>

    <class name="WellCommerce\Bundle\CommonBundle\Entity\TaxTranslation">
        <property name="name">
            <constraint name="NotBlank" />
            <constraint name="NotNull" />
        </property>
    </class>

    <class name="WellCommerce\Bundle\CommonBundle\Entity\Company">
        <property name="name">
            <constraint name="NotBlank" />
        </property>
        <property name="shortName">
            <constraint name="NotBlank" />
        </property>
        <property name="country">
            <constraint name="Country" />
        </property>
    </class>
</constraint-mapping>
