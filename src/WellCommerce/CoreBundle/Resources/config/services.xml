<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="services/helpers.xml"/>
        <import resource="services/form.xml"/>
        <import resource="services/dataset.xml"/>
        <import resource="services/datagrid.xml"/>
    </imports>

    <services>
        <service id="core.event_dispatcher" class="WellCommerce\CoreBundle\EventDispatcher\EventDispatcher">
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="package.command.plugin.require" class="WellCommerce\AppBundle\Command\Package\RequireCommand">
            <tag name="console.command" />
        </service>

        <service id="package.command.plugin.update" class="WellCommerce\AppBundle\Command\Package\UpdateCommand">
            <tag name="console.command" />
        </service>

        <service id="package.command.plugin.remove" class="WellCommerce\AppBundle\Command\Package\RemoveCommand">
            <tag name="console.command" />
        </service>
    </services>
</container>
