<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="services/helpers.xml"/>
        <import resource="services/form.xml"/>
        <import resource="services/dataset.xml"/>
        <import resource="services/datagrid.xml"/>
    </imports>
    <services>
        <service id="doctrine.orm.timestampable.subscriber" class="WellCommerce\CoreBundle\Doctrine\ORM\Behaviours\Timestampable\TimestampableSubscriber">
            <tag name="doctrine.event_subscriber" />
        </service>

        <service id="core.event_dispatcher" class="WellCommerce\CoreBundle\EventDispatcher\EventDispatcher">
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="breadcrumb.collection" class="WellCommerce\CoreBundle\Service\Breadcrumb\BreadcrumbItemCollection" />

        <service id="twig.extension.breadcrumb" class="WellCommerce\CoreBundle\Twig\Extension\BreadcrumbExtension">
            <argument type="service" id="breadcrumb.collection"/>
            <tag name="twig.extension"/>
        </service>
    </services>
</container>
