<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="media.manager.admin" class="WellCommerce\CmsBundle\Manager\Admin\MediaManager">
            <argument type="service" id="media.repository"/>
            <argument type="service" id="media.event_dispatcher"/>
            <argument type="service" id="media.factory"/>
            <argument type="service" id="media.form_builder.admin"/>
            <argument type="service" id="media.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        
        <service id="media.controller.admin" class="WellCommerce\CmsBundle\Controller\Admin\MediaController">
            <argument type="service" id="media.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="media.dataset.query_builder.admin" class="WellCommerce\CmsBundle\DataSet\Admin\MediaDataSetQueryBuilder" public="false">
            <argument type="service" id="media.repository"/>
        </service>

        <service id="media.dataset.admin" class="WellCommerce\CmsBundle\DataSet\Admin\MediaDataSet">
            <argument type="service" id="media.dataset.query_builder.admin"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="media.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="media.datagrid" class="WellCommerce\CmsBundle\DataGrid\MediaDataGrid">
            <argument key="identifier">media</argument>
            <argument type="service" id="media.dataset.admin"/>
            <argument type="service" id="media.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="media.form_builder.admin" class="WellCommerce\CmsBundle\Form\Admin\MediaFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="media.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="form.media_collection.data_transformer" class="WellCommerce\CmsBundle\Form\Admin\DataTransformer\MediaCollectionToArrayTransformer" scope="prototype">
            <argument type="service" id="doctrine.helper"/>
            <tag name="form.data_transformer" alias="media_collection"/>
        </service>

        <service id="form.media_entity.data_transformer" class="WellCommerce\CmsBundle\Form\Admin\DataTransformer\MediaEntityToIdentifierTransformer" scope="prototype">
            <argument type="service" id="doctrine.helper"/>
            <tag name="form.data_transformer" alias="media_entity"/>
        </service>
    </services>
</container>
