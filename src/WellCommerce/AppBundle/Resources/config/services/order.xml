<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/order.xml"/>
        <import resource="front/order.xml"/>
    </imports>

    <services>
        <service id="order.repository" class="WellCommerce\AppBundle\Repository\OrderRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceAppBundle:Order</argument>
        </service>

        <service id="order_product.repository" class="WellCommerce\AppBundle\Repository\OrderProductRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceAppBundle:OrderProduct</argument>
        </service>

        <service id="order.factory" class="WellCommerce\AppBundle\Factory\OrderFactory">
            <argument type="service" id="order_product.factory"/>
            <argument type="service" id="order_total.factory"/>
            <argument type="service" id="currency.helper"/>
        </service>

        <service id="order_product.factory" class="WellCommerce\AppBundle\Factory\OrderProductFactory">
            <argument type="service" id="currency.helper"/>
        </service>

        <service id="order_total.factory" class="WellCommerce\AppBundle\Factory\OrderTotalFactory" />

        <service id="order_total_detail.factory" class="WellCommerce\AppBundle\Factory\OrderTotalDetailFactory"/>

        <service id="order.event_dispatcher" class="WellCommerce\AppBundle\EventDispatcher\OrderEventDispatcher">
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="order_product.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="order.visitor.collection" class="WellCommerce\AppBundle\Service\Order\Visitor\OrderVisitorCollection"/>

        <service id="order.visitor.traverser" class="WellCommerce\AppBundle\Service\Order\Visitor\OrderVisitorTraverser">
            <argument type="service" id="order.visitor.collection"/>
        </service>

        <service id="order_cart_total.visitor" class="WellCommerce\AppBundle\Collector\OrderProductTotalCollector">
            <argument type="service" id="order_total_detail.factory"/>
            <argument type="service" id="currency.helper"/>
            <tag name="order.visitor"/>
        </service>

        <service id="order_shipping_cost.visitor" class="WellCommerce\AppBundle\Collector\OrderShippingCostCollector">
            <argument type="service" id="order_total_detail.factory"/>
            <argument type="service" id="currency.helper"/>
            <tag name="order.visitor"/>
        </service>

        <service id="order_payment_surcharge.visitor" class="WellCommerce\AppBundle\Collector\OrderPaymentSurchargeCollector">
            <argument type="service" id="order_total_detail.factory"/>
            <argument type="service" id="currency.helper"/>
            <tag name="order.visitor"/>
        </service>

        <service id="order_client_discount.visitor" class="WellCommerce\AppBundle\Collector\OrderClientDiscountCollector">
            <argument type="service" id="order_total_detail.factory"/>
            <argument type="service" id="currency.helper"/>
            <tag name="order.visitor"/>
        </service>

        <service id="order_coupon_discount.visitor" class="WellCommerce\AppBundle\Collector\OrderCouponDiscountCollector">
            <argument type="service" id="order_total_detail.factory"/>
            <argument type="service" id="currency.helper"/>
            <tag name="order.visitor"/>
        </service>

        <service id="order_total.visitor" class="WellCommerce\AppBundle\Collector\OrderTotalCollector">
            <argument type="service" id="order_total_detail.factory"/>
            <argument type="service" id="currency.helper"/>
            <tag name="order.visitor"/>
        </service>

        <service id="order.subscriber" class="WellCommerce\AppBundle\EventListener\OrderSubscriber">
            <argument type="service" id="order.visitor.traverser"/>
            <argument type="service" id="order_total.factory"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
