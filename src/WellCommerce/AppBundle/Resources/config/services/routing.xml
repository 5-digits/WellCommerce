<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/routing.xml"/>
        <import resource="front/routing.xml"/>
    </imports>

    <services>
        <service id="routing.repository" class="WellCommerce\AppBundle\Repository\RouteRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceAppBundle:Route</argument>
        </service>

        <service id="routing.factory" class="WellCommerce\AppBundle\Factory\RouteFactory" />

        <service id="routing.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="route.transformer" class="WellCommerce\AppBundle\DataSet\Transformer\RouteTransformer">
            <argument type="service" id="cmf_routing.generator" />
            <tag name="dataset.transformer" alias="route"/>
        </service>

        <service id="routable.subscriber" class="WellCommerce\AppBundle\EventListener\RoutableSubscriber">
            <tag name="doctrine.event_subscriber" />
        </service>

        <service id="routing.command.dump" class="WellCommerce\AppBundle\Command\DumpDynamicRoutesCommand">
            <tag name="console.command"/>
        </service>
    </services>
</container>
