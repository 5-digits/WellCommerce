<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="category.manager.admin" class="WellCommerce\AppBundle\Manager\Admin\CategoryManager">
            <argument type="service" id="category.repository"/>
            <argument type="service" id="category.event_dispatcher"/>
            <argument type="service" id="category.factory"/>
            <argument type="service" id="category.form_builder.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="category.controller.admin" class="WellCommerce\AppBundle\Controller\Admin\CategoryController">
            <argument type="service" id="category.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="category.manager.front" class="WellCommerce\AppBundle\Manager\Front\CategoryManager">
            <argument type="service" id="category.repository"/>
            <argument type="service" id="category.event_dispatcher"/>
            <argument type="service" id="category.factory"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="category.controller.front" class="WellCommerce\AppBundle\Controller\Front\CategoryController">
            <argument type="service" id="category.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="category_menu.layout_box.configurator" class="WellCommerce\AppBundle\Service\LayoutBox\Configurator\CategoryMenuBoxConfigurator">
            <argument>CategoryMenu</argument>
            <argument>category_menu.layout_box.controller</argument>
            <argument type="service" id="translator.helper"/>
            <tag name="layout_box.configurator" />
        </service>

        <service id="category_info.layout_box.configurator" class="WellCommerce\AppBundle\Service\LayoutBox\Configurator\CategoryInfoBoxConfigurator">
            <argument>CategoryInfo</argument>
            <argument>category_info.layout_box.controller</argument>
            <argument type="service" id="translator.helper"/>
            <tag name="layout_box.configurator" />
        </service>

        <service id="category.dataset.query_builder.front" class="WellCommerce\AppBundle\DataSet\Front\CategoryDataSetQueryBuilder" public="false">
            <argument type="service" id="category.repository"/>
            <call method="setShopContext">
                <argument type="service" id="shop.context.front"/>
            </call>
        </service>

        <service id="category.dataset.query_builder.admin" class="WellCommerce\AppBundle\DataSet\Admin\CategoryDataSetQueryBuilder" public="false">
            <argument type="service" id="category.repository"/>
            <call method="setShopContext">
                <argument type="service" id="shop.context.admin"/>
            </call>
        </service>

        <service id="category.dataset.admin" class="WellCommerce\AppBundle\DataSet\Admin\CategoryDataSet">
            <argument type="service" id="category.dataset.query_builder.admin"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="category.event_dispatcher"/>
            <configurator method="configure" service="dataset.configurator"/>
        </service>

        <service id="category.form_builder.admin" class="WellCommerce\AppBundle\Form\Admin\CategoryFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="category.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="category_tree.form_builder.admin" class="WellCommerce\AppBundle\Form\Admin\CategoryTreeFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="category.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="category_products.layout_box.configurator" class="WellCommerce\AppBundle\Service\LayoutBox\Configurator\CategoryProductsBoxConfigurator">
            <argument>CategoryProducts</argument>
            <argument>category_products.layout_box.controller</argument>
            <argument type="service" id="translator.helper"/>
            <tag name="layout_box.configurator" />
        </service>
    </services>
</container>
