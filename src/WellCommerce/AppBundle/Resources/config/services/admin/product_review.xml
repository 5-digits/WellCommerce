<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="product_review.manager.admin" class="WellCommerce\AppBundle\Manager\Admin\ProductReviewManager">
            <argument type="service" id="product_review.repository"/>
            <argument type="service" id="product_review.event_dispatcher"/>
            <argument type="service" id="product_review.factory"/>
            <argument type="service" id="product_review.form_builder.admin"/>
            <argument type="service" id="product_review.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="product_review.controller.admin" class="WellCommerce\AppBundle\Controller\Admin\ProductReviewController">
            <argument type="service" id="product_review.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="product_review.dataset.query_builder.admin" class="WellCommerce\AppBundle\DataSet\Admin\ProductReviewDataSetQueryBuilder" public="false">
            <argument type="service" id="product_review.repository"/>
        </service>

        <service id="product_review.dataset.admin" class="WellCommerce\AppBundle\DataSet\Admin\ProductReviewDataSet">
            <argument type="service" id="product_review.dataset.query_builder.admin"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="product_review.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="product_review.datagrid" class="WellCommerce\AppBundle\DataGrid\ProductReviewDataGrid">
            <argument key="identifier">product_review</argument>
            <argument type="service" id="product_review.dataset.admin"/>
            <argument type="service" id="product_review.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="product_review.form_builder.admin" class="WellCommerce\AppBundle\Form\Admin\ProductReviewFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="product_review.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        
        <service id="product_review.layout_box.configurator" class="WellCommerce\AppBundle\Layout\ProductReviewBoxConfigurator">
            <argument>ProductReview</argument>
            <argument>product_review.layout_box.controller</argument>
            <argument type="service" id="translator.helper"/>
            <tag name="layout_box.configurator" />
        </service>
    </services>
</container>
