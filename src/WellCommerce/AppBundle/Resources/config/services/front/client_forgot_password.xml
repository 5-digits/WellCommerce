<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="client_forgot_password.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="client_forgot_password.manager.front" class="WellCommerce\AppBundle\Manager\Front\ClientForgotPasswordManager">
            <argument type="service" id="client.repository"/>
            <argument type="service" id="client_forgot_password.event_dispatcher"/>
            <argument type="service" id="client.factory"/>
            <argument type="service" id="client_forgot_password_reset.form_builder.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="client_forgot_password.controller.front" class="WellCommerce\AppBundle\Controller\Front\ClientForgotPasswordController">
            <argument type="service" id="client.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="client_forgot_password_reset.form_builder.front" class="WellCommerce\AppBundle\Form\Front\ClientResetPasswordFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="client_forgot_password.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="client_forgot_password_change.form_builder.front" class="WellCommerce\AppBundle\Form\Front\ClientChangePasswordFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="client_forgot_password.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="client_forgot_password.layout_box.controller" class="WellCommerce\AppBundle\Controller\Box\ClientForgotPasswordBoxController">
            <argument type="service" id="client_forgot_password.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="client_forgot_password.layout_box.configurator" class="WellCommerce\AppBundle\Layout\ClientForgotPasswordBoxConfigurator">
            <argument>ClientForgotPassword</argument>
            <argument>client_forgot_password.layout_box.controller</argument>
            <argument type="service" id="translator.helper"/>
            <tag name="layout_box.configurator" />
        </service>
    </services>
</container>
