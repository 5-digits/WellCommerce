<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="shop.context.front" class="WellCommerce\AppBundle\Service\Shop\Context\Front\ShopContext" />

        <service id="shop.resolver.front" class="WellCommerce\AppBundle\Service\Shop\Resolver\Front\ShopResolver">
            <argument type="service" id="shop.context.front" />
            <argument type="service" id="shop.repository" />
            <argument type="service" id="request.helper" />
        </service>
    </services>
</container>
