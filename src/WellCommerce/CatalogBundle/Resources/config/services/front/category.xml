<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="category.manager.front" class="WellCommerce\CatalogBundle\Manager\Front\CategoryManager">
            <argument type="service" id="category.repository"/>
            <argument type="service" id="category.event_dispatcher"/>
            <argument type="service" id="category.factory"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="category.controller.front" class="WellCommerce\CatalogBundle\Controller\Front\CategoryController">
            <argument type="service" id="category.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="category_menu.layout_box.controller" class="WellCommerce\CatalogBundle\Controller\Box\CategoryMenuBoxController">
            <argument type="service" id="category.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="category_info.layout_box.controller" class="WellCommerce\CatalogBundle\Controller\Box\CategoryInfoBoxController">
            <argument type="service" id="category.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="category.dataset.query_builder.front" class="WellCommerce\CatalogBundle\DataSet\Front\CategoryDataSetQueryBuilder" public="false">
            <argument type="service" id="category.repository"/>
            <call method="setShopContext">
                <argument type="service" id="shop.context.front"/>
            </call>
        </service>

        <service id="category.dataset.front" class="WellCommerce\CatalogBundle\DataSet\Front\CategoryDataSet">
            <argument type="service" id="category.dataset.query_builder.front"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="category.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="category_products.layout_box.controller" class="WellCommerce\CatalogBundle\Controller\Box\CategoryProductsBoxController">
            <argument type="service" id="category.manager.front"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="category.context.front" class="WellCommerce\CatalogBundle\Context\Front\CategoryContext"/>
    </services>
</container>
