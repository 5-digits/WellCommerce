<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/product_attribute.xml"/>
    </imports>

    <services>
        <service id="product_attribute.repository" class="WellCommerce\CatalogBundle\Repository\ProductAttributeRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceCatalogBundle:ProductAttribute</argument>
        </service>

        <service id="product_attribute.factory" class="WellCommerce\CatalogBundle\Factory\ProductAttributeFactory"/>

        <service id="product_attribute.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="product_attribute.helper" class="WellCommerce\CatalogBundle\Helper\ProductAttributeHelper">
            <argument type="service" id="currency.helper"/>
        </service>

        <service id="product_attribute.request_param_converter" class="WellCommerce\CatalogBundle\Request\ParamConverter\ProductAttributeParamConverter">
            <argument type="service" id="product_attribute.repository" />
            <argument>attribute</argument>
            <argument type="collection">
                <argument>WellCommerce\CatalogBundle\Entity\ProductAttribute</argument>
                <argument>WellCommerce\CatalogBundle\Entity\ProductAttributeInterface</argument>
            </argument>
            <tag name="request.param_converter" converter="product_attribute" priority="10"/>
        </service>
    </services>
</container>
