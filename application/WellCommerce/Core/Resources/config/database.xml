<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
        <parameter key="database_manager.class">Illuminate\Database\Capsule\Manager</parameter>
        <parameter key="eloquent.initializer.class">WellCommerce\Core\EventListener\EloquentInitializer</parameter>
    </parameters>

    <services>
        <service id="database_manager" class="%database_manager.class%">
            <call method="addConnection">
                <argument type="collection">
                    <argument key="driver">%database.driver%</argument>
                    <argument key="host">%database.host%</argument>
                    <argument key="database">%database.database%</argument>
                    <argument key="username">%database.username%</argument>
                    <argument key="password">%database.password%</argument>
                    <argument key="charset">%database.charset%</argument>
                    <argument key="collation">%database.collation%</argument>
                    <argument key="prefix">%database.prefix%</argument>
                </argument>
            </call>
        </service>
        <service id="eloquent.initializer" class="%eloquent.initializer.class%">
            <argument type="service" id="database_manager" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>