<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="dataset_builder.class">WellCommerce\Core\DataSet\DataSetBuilder</parameter>
        <parameter key="dataset_loader.class">WellCommerce\Core\DataSet\Loader\Loader</parameter>
        <parameter key="dataset_paginator.class">WellCommerce\Core\DataSet\Paginator\Paginator</parameter>
        <parameter key="dataset_columns.class">WellCommerce\Core\DataSet\Column\ColumnCollection</parameter>
        <parameter key="dataset_configurator.class">WellCommerce\Core\DataSet\Configurator</parameter>
    </parameters>

    <services>
        <service id="dataset_loader" class="%dataset_loader.class%" />

        <service id="dataset_columns" class="%dataset_columns.class%" />

        <service id="dataset_paginator" class="%dataset_paginator.class%" />

        <service id="dataset_configurator" class="%dataset_configurator.class%" />

        <service id="dataset_builder" class="%dataset_builder.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>