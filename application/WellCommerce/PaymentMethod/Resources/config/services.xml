<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="payment_method.admin.controller.class">WellCommerce\PaymentMethod\Controller\Admin\PaymentMethodController</parameter>
        <parameter key="payment_method.repository.class">WellCommerce\PaymentMethod\Repository\PaymentMethodRepository</parameter>
        <parameter key="payment_method.datagrid.class">WellCommerce\PaymentMethod\DataGrid\PaymentMethodDataGrid</parameter>
        <parameter key="payment_method.form.class">WellCommerce\PaymentMethod\Form\PaymentMethodForm</parameter>
        <parameter key="payment_method.listener.class">WellCommerce\PaymentMethod\EventListener\PaymentMethodListener</parameter>
        <parameter key="payment_method.configurator.class">WellCommerce\PaymentMethod\Configurator\PaymentMethodConfigurator</parameter>
        <parameter key="payment_method.processor.collection.class">WellCommerce\PaymentMethod\Processor\PaymentMethodProcessorCollection</parameter>
        <parameter key="payment_method.configurator.collection.class">WellCommerce\PaymentMethod\Configurator\PaymentMethodConfiguratorCollection</parameter>
    </parameters>

    <services>
        <service id="payment_method.admin.controller" class="%payment_method.admin.controller.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setRepository">
                <argument type="service" id="payment_method.repository"/>
            </call>
        </service>

        <service id="payment_method.repository" class="%payment_method.repository.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="payment_method.configurator" class="%payment_method.configurator.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="payment_method.processor.collection" class="%payment_method.processor.collection.class%" />

        <service id="payment_method.configurator.collection" class="%payment_method.configurator.collection.class%" />

        <service id="payment_method.datagrid" class="%payment_method.datagrid.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="payment_method.repository"/>
        </service>

        <service id="payment_method.form" class="%payment_method.form.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="payment_method.listener" class="%payment_method.listener.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="translator"/>
            <argument type="service" id="router"/>
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>