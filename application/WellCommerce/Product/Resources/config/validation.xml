<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="WellCommerce\Product\Model\Product">
        <property name="attributes">
            <constraint name="Collection">
                <option name="fields">
                    <value key="producer_id">
                        <constraint name="NotNull"/>
                    </value>
                    <value key="stock">
                        <constraint name="GreaterThanOrEqual">
                            <option name="value">0</option>
                            <option name="message">Stock should be greater or equal to 0.</option>
                        </constraint>
                    </value>
                </option>
                <option name="allowMissingFields">false</option>
                <option name="allowExtraFields">true</option>
            </constraint>
        </property>
    </class>

    <class name="WellCommerce\Product\Model\ProductTranslation">
        <property name="attributes">
            <constraint name="Collection">
                <option name="fields">
                    <value key="name">
                        <constraint name="NotNull"/>
                    </value>
                    <value key="description">
                        <constraint name="NotNull"/>
                    </value>
                    <value key="language_id">
                        <constraint name="NotNull"/>
                    </value>
                </option>
                <option name="allowMissingFields">false</option>
                <option name="allowExtraFields">true</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>