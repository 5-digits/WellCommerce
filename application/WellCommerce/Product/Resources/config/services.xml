<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="product.admin.controller.class">WellCommerce\Product\Controller\Admin\ProductController</parameter>
        <parameter key="product.front.controller.class">WellCommerce\Product\Controller\Front\ProductController</parameter>
        <parameter key="product.box.controller.class">WellCommerce\Product\Controller\Box\ProductBoxController</parameter>
        <parameter key="product_list.box.controller.class">WellCommerce\Product\Controller\Box\ProductListBoxController</parameter>
        <parameter key="product.repository.class">WellCommerce\Product\Repository\ProductRepository</parameter>
        <parameter key="product.datagrid.class">WellCommerce\Product\DataGrid\ProductDataGrid</parameter>
        <parameter key="product.datagrid.configurator.class">WellCommerce\Product\DataGrid\ProductDataGridConfigurator</parameter>
        <parameter key="product.datagrid.query.class">WellCommerce\Product\DataGrid\ProductDataGridQuery</parameter>
        <parameter key="product.dataset.class">WellCommerce\Product\DataSet\ProductDataSet</parameter>
        <parameter key="product.dataset.configurator.class">WellCommerce\Product\DataSet\ProductDataSetConfigurator</parameter>
        <parameter key="product.dataset.query.class">WellCommerce\Product\DataSet\ProductDataSetQuery</parameter>
        <parameter key="product.form.class">WellCommerce\Product\Form\ProductForm</parameter>
        <parameter key="product.listener.class">WellCommerce\Product\EventListener\ProductListener</parameter>
        <parameter key="product.provider.class">WellCommerce\Product\Provider\ProductProvider</parameter>
    </parameters>

    <services>
        <service id="product.admin.controller" class="%product.admin.controller.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setRepository">
                <argument type="service" id="product.repository"/>
            </call>
        </service>

        <service id="product.front.controller" class="%product.front.controller.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setRepository">
                <argument type="service" id="product.repository"/>
            </call>
            <call method="setLayout">
                <argument>Product</argument>
                <argument>true</argument>
                <argument>3600</argument>
            </call>
        </service>

        <service id="product.box.controller" class="%product.box.controller.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="product_list.box.controller" class="%product_list.box.controller.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="product.repository" class="%product.repository.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="product.datagrid.query" class="%product.datagrid.query.class%">
            <argument type="service" id="database_manager"/>
        </service>

        <service id="product.datagrid.configurator" class="%product.datagrid.configurator.class%">
            <argument key="identifier">product</argument>
            <argument type="service" id="datagrid_options" />
            <argument type="service" id="datagrid_columns" />
            <argument type="service" id="product.datagrid.query" />
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="product.datagrid" class="%product.datagrid.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="datagrid_loader" />
            <configurator service="product.datagrid.configurator" method="configure" />
        </service>

        <service id="product.dataset.query" class="%product.dataset.query.class%">
            <argument type="service" id="database_manager"/>
        </service>

        <service id="product.dataset.configurator" class="%product.dataset.configurator.class%">
            <argument key="identifier">product</argument>
            <argument type="service" id="dataset_columns" />
            <argument type="service" id="product.dataset.query" />
            <argument type="service" id="dataset_paginator" />
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="product.dataset" class="%product.dataset.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="dataset_loader" />
            <configurator service="product.dataset.configurator" method="configure" />
        </service>

        <service id="product.form" class="%product.form.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="product.provider" class="%product.provider.class%" />

        <service id="product.listener" class="%product.listener.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="translator"/>
            <argument type="service" id="router"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>