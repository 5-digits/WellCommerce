<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="product_box.layout.configurator.class">WellCommerce\Product\Layout\ProductBoxConfigurator</parameter>
        <parameter key="product_list_box.layout.configurator.class">WellCommerce\Product\Layout\ProductListBoxConfigurator</parameter>
    </parameters>

    <services>
        <service id="product_box.layout.configurator" class="%product_box.layout.configurator.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="layout_box.configurator" type="wellcommerce_product_box" controller="product.box.controller" />
            <tag name="kernel.event_listener" event="layout_box.form.init" method="addConfigurationFields" />
        </service>
        <service id="product_list_box.layout.configurator" class="%product_list_box.layout.configurator.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="layout_box.configurator" type="wellcommerce_product_list_box" controller="product_list.box.controller" />
            <tag name="kernel.event_listener" event="layout_box.form.init" method="addConfigurationFields" />
        </service>
    </services>
</container>