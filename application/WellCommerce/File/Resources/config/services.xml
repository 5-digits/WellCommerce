<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="file.admin.controller.class">WellCommerce\File\Controller\Admin\FileController</parameter>
        <parameter key="file.repository.class">WellCommerce\File\Repository\FileRepository</parameter>
        <parameter key="file.datagrid.class">WellCommerce\File\DataGrid\FileDataGrid</parameter>
        <parameter key="file.datagrid.configurator.class">WellCommerce\File\DataGrid\FileDataGridConfigurator</parameter>
        <parameter key="file.datagrid.query.class">WellCommerce\File\DataGrid\FileDataGridQuery</parameter>
        <parameter key="file.form.class">WellCommerce\File\Form\FileForm</parameter>
        <parameter key="file.listener.class">WellCommerce\File\EventListener\FileListener</parameter>
    </parameters>

    <services>
        <service id="file.admin.controller" class="%file.admin.controller.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setRepository">
                <argument type="service" id="file.repository"/>
            </call>
        </service>

        <service id="file.repository" class="%file.repository.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="file.datagrid.query" class="%file.datagrid.query.class%">
            <argument type="service" id="database_manager"/>
        </service>

        <service id="file.datagrid.configurator" class="%file.datagrid.configurator.class%">
            <argument key="identifier">file</argument>
            <argument type="service" id="datagrid_options"/>
            <argument type="service" id="datagrid_columns"/>
            <argument type="service" id="file.datagrid.query"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="file.datagrid" class="%file.datagrid.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="file.repository"/>
            <argument type="service" id="datagrid_loader"/>
            <configurator service="file.datagrid.configurator" method="configure"/>
        </service>

        <service id="file.form" class="%file.form.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="file.listener" class="%file.listener.class%">
            <argument type="service" id="service_container"/>
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
