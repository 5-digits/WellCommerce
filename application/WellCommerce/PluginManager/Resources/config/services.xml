<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="plugin_manager.repository" class="WellCommerce\PluginManager\Repository\PluginManagerRepository">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="plugin_manager.datagrid" class="WellCommerce\PluginManager\DataGrid\PluginManagerDataGrid">
            <call method="setRepository">
                <argument type="service" id="plugin_manager.repository"/>
            </call>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="plugin_manager.form" class="WellCommerce\PluginManager\Form\PluginManagerForm">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>