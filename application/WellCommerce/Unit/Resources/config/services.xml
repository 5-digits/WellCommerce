<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="unit.admin.controller.class">WellCommerce\Unit\Controller\Admin\UnitController</parameter>
        <parameter key="unit.repository.class">WellCommerce\Unit\Repository\UnitRepository</parameter>
        <parameter key="unit.datagrid.class">WellCommerce\Unit\DataGrid\UnitDataGrid</parameter>
        <parameter key="unit.datagrid.configurator.class">WellCommerce\Unit\DataGrid\UnitDataGridConfigurator</parameter>
        <parameter key="unit.datagrid.query.class">WellCommerce\Unit\DataGrid\UnitDataGridQuery</parameter>
        <parameter key="unit.form.class">WellCommerce\Unit\Form\UnitForm</parameter>
        <parameter key="unit.listener.class">WellCommerce\Unit\EventListener\UnitListener</parameter>
    </parameters>

    <services>
        <service id="unit.admin.controller" class="%unit.admin.controller.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setRepository">
                <argument type="service" id="unit.repository"/>
            </call>
        </service>

        <service id="unit.repository" class="%unit.repository.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="unit.datagrid.query" class="%unit.datagrid.query.class%">
            <argument type="service" id="database_manager"/>
        </service>

        <service id="unit.datagrid.configurator" class="%unit.datagrid.configurator.class%">
            <argument key="identifier">unit</argument>
            <argument type="service" id="datagrid_options" />
            <argument type="service" id="datagrid_columns" />
            <argument type="service" id="unit.datagrid.query" />
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="unit.datagrid" class="%unit.datagrid.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="unit.repository"/>
            <argument type="service" id="datagrid_loader" />
            <configurator service="unit.datagrid.configurator" method="configure" />
        </service>
        
        <service id="unit.form" class="%unit.form.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="unit.listener" class="%unit.listener.class%">
            <argument type="service" id="service_container"/>
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
