<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin.language.index" pattern="/admin/language/index">
        <default key="_controller">language.admin.controller:indexAction</default>
    </route>

    <route id="admin.language.add" pattern="/admin/language/add">
        <default key="_controller">language.admin.controller:addAction</default>
    </route>

    <route id="admin.language.edit" pattern="/admin/language/edit/{id}">
        <default key="_controller">language.admin.controller:editAction</default>
        <default key="id"></default>
    </route>

</routes>
 