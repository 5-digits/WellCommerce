<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cache_manager.repository.class">WellCommerce\Plugin\CacheManager\Repository\CacheManagerRepository</parameter>
        <parameter key="cache_manager.datagrid.class">WellCommerce\Plugin\CacheManager\DataGrid\CacheManagerDataGrid</parameter>
        <parameter key="cache_manager.listener.class">WellCommerce\Plugin\CacheManager\EventListener\CacheManagerListener</parameter>
    </parameters>

    <services>
        <service id="cache_manager.repository" class="%cache_manager.repository.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="cache_manager.datagrid" class="%cache_manager.datagrid.class%">
            <call method="setRepository">
                <argument type="service" id="cache_manager.repository"/>
            </call>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="cache_manager.listener" class="%cache_manager.listener.class%">
            <argument type="service" id="service_container"/>
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>