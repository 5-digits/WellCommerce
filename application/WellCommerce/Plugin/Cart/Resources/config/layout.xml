<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cart_box.layout.configurator.class">WellCommerce\Plugin\Cart\Layout\CartBoxConfigurator</parameter>
    </parameters>

    <services>
        <service id="cart_box.layout.configurator" class="%cart_box.layout.configurator.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="layout_box.configurator" type="wellcommerce_cart_box" controller="cart.box.controller"/>
            <tag name="kernel.event_listener" event="layout_box.form.init" method="addConfigurationFields" />
        </service>
    </services>
</container>