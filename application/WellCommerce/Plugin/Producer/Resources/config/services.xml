<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="producer.admin.controller.class">WellCommerce\Plugin\Producer\Controller\Admin\ProducerController</parameter>
        <parameter key="producer.repository.class">WellCommerce\Plugin\Producer\Repository\ProducerRepository</parameter>
        <parameter key="producer.datagrid.class">WellCommerce\Plugin\Producer\DataGrid\ProducerDataGrid</parameter>
        <parameter key="producer.form.class">WellCommerce\Plugin\Producer\Form\ProducerForm</parameter>
    </parameters>
    
    <services>
        <service id="producer.admin.controller" class="%producer.admin.controller.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setRepository">
                <argument type="service" id="producer.repository"/>
            </call>
            <call method="setDataGrid">
                <argument type="service" id="producer.datagrid"/>
            </call>
            <call method="setFormBuilder">
                <argument type="service" id="producer.form"/>
            </call>
        </service>
        
        <service id="producer.repository" class="WellCommerce\Plugin\Producer\Repository\ProducerRepository">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        
        <service id="producer.datagrid" class="WellCommerce\Plugin\Producer\DataGrid\ProducerDataGrid">
            <call method="setRepository">
                <argument type="service" id="producer.repository" />
            </call>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        
        <service id="producer.form" class="WellCommerce\Plugin\Producer\Form\ProducerForm">
        	<call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="producer_box.layout.configurator" class="WellCommerce\Plugin\Producer\Layout\ProducerBoxConfigurator">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="layout_box.configurator" />
        </service>

        <service id="producer_list_box.layout.configurator" class="WellCommerce\Plugin\Producer\Layout\ProducerListBoxConfigurator">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="layout_box.configurator" />
        </service>

        <service id="producer_page.layout" class="WellCommerce\Plugin\Producer\Layout\ProducerLayoutPage">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="layout_page" alias="Producer" columns="producer.xml" />
        </service>

    </services>
</container>