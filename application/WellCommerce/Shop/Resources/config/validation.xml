<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="WellCommerce\Shop\Model\Shop">
        <property name="attributes">
            <constraint name="Collection">
                <option name="fields">
                    <value key="url">
                        <constraint name="Url" />
                    </value>
                    <value key="offline">
                        <constraint name="Choice">
                            <option name="choices">
                                <value>0</value>
                                <value>1</value>
                            </option>
                            <option name="message">Choose a valid offline status.</option>
                        </constraint>
                    </value>
                    <value key="company_id">
                        <constraint name="NotNull"/>
                    </value>
                    <value key="layout_theme_id">
                        <constraint name="NotNull"/>
                    </value>
                </option>
                <option name="allowMissingFields">false</option>
                <option name="allowExtraFields">true</option>
            </constraint>
        </property>
    </class>

    <class name="WellCommerce\Shop\Model\ShopTranslation">
        <property name="attributes">
            <constraint name="Collection">
                <option name="fields">
                    <value key="name">
                        <constraint name="NotNull"/>
                    </value>
                    <value key="language_id">
                        <constraint name="NotNull"/>
                    </value>
                </option>
                <option name="allowMissingFields">false</option>
                <option name="allowExtraFields">true</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>