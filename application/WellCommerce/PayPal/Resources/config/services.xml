<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="paypal.processor.class">WellCommerce\PayPal\Processor\PayPalProcessor</parameter>
        <parameter key="paypal.configurator.class">WellCommerce\PayPal\Configurator\PayPalConfigurator</parameter>
    </parameters>

    <services>
        <service id="paypal.repository" class="WellCommerce\PayPal\Repository\PayPalRepository">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        
        <service id="paypal.datagrid" class="WellCommerce\PayPal\DataGrid\PayPalDataGrid">
            <call method="setRepository">
                <argument type="service" id="paypal.repository" />
            </call>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        
        <service id="paypal.form" class="WellCommerce\PayPal\Form\PayPalForm">
        	<call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="paypal.processor" class="%paypal.processor.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="payment_method.processor" alias="PayPal" />
        </service>

        <service id="paypal.configurator" class="%paypal.configurator.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="payment_method.configurator" alias="PayPal" />
        </service>
    </services>
</container>