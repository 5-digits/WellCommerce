<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="layout.repository.class">WellCommerce\Layout\Repository\LayoutRepository</parameter>
        <parameter key="layout_theme.repository.class">WellCommerce\Layout\Repository\LayoutThemeRepository</parameter>
        <parameter key="layout_theme.datagrid.class">WellCommerce\Layout\DataGrid\LayoutThemeDataGrid</parameter>
        <parameter key="layout_theme.datagrid.configurator.class">WellCommerce\Layout\DataGrid\LayoutThemeDataGridConfigurator</parameter>
        <parameter key="layout_theme.datagrid.query.class">WellCommerce\Layout\DataGrid\LayoutThemeDataGridQuery</parameter>
        <parameter key="layout_theme.form.class">WellCommerce\Layout\Form\LayoutThemeForm</parameter>
        <parameter key="layout_theme.admin.controller.class">WellCommerce\Layout\Controller\Admin\LayoutThemeController</parameter>
        <parameter key="layout_page.repository.class">WellCommerce\Layout\Repository\LayoutPageRepository</parameter>
        <parameter key="layout_page.tree.class">WellCommerce\Layout\Form\LayoutPageTree</parameter>
        <parameter key="layout_page.form.class">WellCommerce\Layout\Form\LayoutPageForm</parameter>
        <parameter key="layout_page.admin.controller.class">WellCommerce\Layout\Controller\Admin\LayoutPageController</parameter>
        <parameter key="layout_box.repository.class">WellCommerce\Layout\Repository\LayoutBoxRepository</parameter>
        <parameter key="layout_box.datagrid.class">WellCommerce\Layout\DataGrid\LayoutBoxDataGrid</parameter>
        <parameter key="layout_box.form.class">WellCommerce\Layout\Form\LayoutBoxForm</parameter>
        <parameter key="layout_box.admin.controller.class">WellCommerce\Layout\Controller\Admin\LayoutBoxController</parameter>
        <parameter key="layout.listener.class">WellCommerce\Layout\EventListener\LayoutListener</parameter>
        <parameter key="twig.extension.layout.class">WellCommerce\Layout\Twig\LayoutExtension</parameter>
    </parameters>

    <services>
        <service id="layout_theme.admin.controller" class="%layout_theme.admin.controller.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setRepository">
                <argument type="service" id="layout_theme.repository"/>
            </call>
        </service>

        <service id="layout_page.admin.controller" class="%layout_page.admin.controller.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setRepository">
                <argument type="service" id="layout_page.repository"/>
            </call>
        </service>

        <service id="layout_box.admin.controller" class="%layout_box.admin.controller.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setRepository">
                <argument type="service" id="layout_box.repository"/>
            </call>
        </service>

        <service id="layout.repository" class="%layout.repository.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="layout_theme.repository" class="%layout_theme.repository.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="layout_theme.datagrid.query" class="%layout_theme.datagrid.query.class%">
            <argument type="service" id="database_manager"/>
        </service>

        <service id="layout_theme.datagrid.configurator" class="%layout_theme.datagrid.configurator.class%">
            <argument key="identifier">layout_theme</argument>
            <argument type="service" id="datagrid_options" />
            <argument type="service" id="datagrid_columns" />
            <argument type="service" id="layout_theme.datagrid.query" />
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="layout_theme.datagrid" class="%layout_theme.datagrid.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="layout_theme.repository"/>
            <argument type="service" id="datagrid_loader" />
            <configurator service="layout_theme.datagrid.configurator" method="configure" />
        </service>

        <service id="layout_theme.form" class="%layout_theme.form.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="layout_page.repository" class="%layout_page.repository.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="layout_page.form" class="%layout_page.form.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="layout_page.tree" class="%layout_page.tree.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="layout_box.repository" class="%layout_box.repository.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="layout_box.datagrid" class="%layout_box.datagrid.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="layout_box.repository"/>
        </service>

        <service id="layout_box.form" class="%layout_box.form.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="layout.listener" class="%layout.listener.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="translator"/>
            <argument type="service" id="router"/>
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="twig.extension.layout" class="%twig.extension.layout.class%">
            <argument type="service" id="service_container"/>
            <tag name="twig.extension"/>
        </service>
    </services>
</container>