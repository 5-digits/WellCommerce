<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="tax.admin.controller.class">WellCommerce\Tax\Controller\Admin\TaxController</parameter>
        <parameter key="tax.repository.class">WellCommerce\Tax\Repository\TaxRepository</parameter>
        <parameter key="tax.datagrid.class">WellCommerce\Tax\DataGrid\TaxDataGrid</parameter>
        <parameter key="tax.datagrid.configurator.class">WellCommerce\Tax\DataGrid\TaxDataGridConfigurator</parameter>
        <parameter key="tax.datagrid.query.class">WellCommerce\Tax\DataGrid\TaxDataGridQuery</parameter>
        <parameter key="tax.form.class">WellCommerce\Tax\Form\TaxForm</parameter>
        <parameter key="tax.listener.class">WellCommerce\Tax\EventListener\TaxListener</parameter>
    </parameters>

    <services>
        <service id="tax.admin.controller" class="%tax.admin.controller.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setRepository">
                <argument type="service" id="tax.repository"/>
            </call>
        </service>

        <service id="tax.repository" class="%tax.repository.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="tax.datagrid.query" class="%tax.datagrid.query.class%">
            <argument type="service" id="database_manager"/>
        </service>

        <service id="tax.datagrid.configurator" class="%tax.datagrid.configurator.class%">
            <argument key="identifier">tax</argument>
            <argument type="service" id="datagrid_options" />
            <argument type="service" id="datagrid_columns" />
            <argument type="service" id="tax.datagrid.query" />
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="tax.datagrid" class="%tax.datagrid.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="tax.repository"/>
            <argument type="service" id="datagrid_loader" />
            <configurator service="tax.datagrid.configurator" method="configure" />
        </service>

        <service id="tax.form" class="%tax.form.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="tax.listener" class="%tax.listener.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="translator"/>
            <argument type="service" id="router"/>
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
