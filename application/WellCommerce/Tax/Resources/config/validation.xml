<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="WellCommerce\Tax\Model\Tax">
        <property name="attributes">
            <constraint name="Collection">
                <option name="fields">
                    <value key="value">
                        <constraint name="Range">
                            <option name="min">0</option>
                            <option name="max">100</option>
                            <option name="minMessage">Tax value should not be negative</option>
                            <option name="maxMessage">Tax value should not be greater than 100</option>
                        </constraint>
                    </value>
                </option>
                <option name="allowMissingFields">false</option>
                <option name="allowExtraFields">true</option>
            </constraint>
        </property>
    </class>

    <class name="WellCommerce\Tax\Model\TaxTranslation">
        <property name="attributes">
            <constraint name="Collection">
                <option name="fields">
                    <value key="name">
                        <constraint name="NotNull"/>
                    </value>
                    <value key="language_id">
                        <constraint name="NotNull"/>
                    </value>
                </option>
                <option name="allowMissingFields">false</option>
                <option name="allowExtraFields">true</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>