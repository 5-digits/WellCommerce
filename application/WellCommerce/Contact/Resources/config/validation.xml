<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="WellCommerce\Contact\Model\Contact">
        <property name="attributes">
            <constraint name="Collection">
                <option name="fields">
                    <value key="enabled">
                        <constraint name="Choice">
                            <option name="choices">
                                <value>1</value>
                                <value>0</value>
                            </option>
                            <option name="message">Choose a valid status.</option>
                        </constraint>
                    </value>
                </option>
                <option name="allowMissingFields">false</option>
                <option name="allowExtraFields">true</option>
            </constraint>
        </property>
    </class>

    <class name="WellCommerce\Contact\Model\ContactTranslation">
        <property name="attributes">
            <constraint name="Collection">
                <option name="fields">
                    <value key="name">
                        <constraint name="NotNull"/>
                    </value>
                    <value key="email">
                        <constraint name="Email">
                            <option name="message">The email "{{ value }}" is not a valid email.</option>
                            <option name="checkMX">true</option>
                        </constraint>
                    </value>
                    <value key="language_id">
                        <constraint name="NotNull"/>
                    </value>
                </option>
                <option name="allowMissingFields">false</option>
                <option name="allowExtraFields">true</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>