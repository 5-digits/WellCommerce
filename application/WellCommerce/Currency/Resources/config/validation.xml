<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="WellCommerce\Currency\Model\Currency">
        <property name="attributes">
            <constraint name="Collection">
                <option name="fields">
                    <value key="name">
                        <constraint name="NotNull"/>
                    </value>
                    <value key="symbol">
                        <constraint name="Currency"/>
                    </value>
                    <value key="decimal_separator">
                        <constraint name="NotNull"/>
                    </value>
                    <value key="decimal_count">
                        <constraint name="Range">
                            <option name="min">0</option>
                            <option name="max">4</option>
                            <option name="minMessage">Currency should not be negative</option>
                            <option name="maxMessage">Currency should not have more than 4 decimal places</option>
                        </constraint>
                    </value>
                </option>
                <option name="allowMissingFields">false</option>
                <option name="allowExtraFields">true</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>