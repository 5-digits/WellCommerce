<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="producer_box.layout.configurator.class">WellCommerce\Producer\Layout\ProducerBoxConfigurator</parameter>
        <parameter key="producer_list_box.layout.configurator.class">WellCommerce\Producer\Layout\ProducerListBoxConfigurator</parameter>
    </parameters>

    <services>
        <service id="producer_box.layout.configurator" class="%producer_box.layout.configurator.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="layout_box.configurator" type="wellcommerce_producer_box" controller="producer.box.controller" />
            <tag name="kernel.event_listener" event="layout_box.form.init" method="addConfigurationFields" />
        </service>
        <service id="producer_list_box.layout.configurator" class="%producer_list_box.layout.configurator.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="layout_box.configurator" type="wellcommerce_producer_list_box" controller="producer_list.box.controller" />
            <tag name="kernel.event_listener" event="layout_box.form.init" method="addConfigurationFields" />
        </service>
    </services>
</container>