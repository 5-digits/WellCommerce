<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="producer.admin.controller.class">WellCommerce\Producer\Controller\Admin\ProducerController</parameter>
        <parameter key="producer.front.controller.class">WellCommerce\Producer\Controller\Front\ProducerController</parameter>
        <parameter key="producer.box.controller.class">WellCommerce\Producer\Controller\Box\ProducerBoxController</parameter>
        <parameter key="producer_list.box.controller.class">WellCommerce\Producer\Controller\Box\ProducerListBoxController</parameter>
        <parameter key="producer.repository.class">WellCommerce\Producer\Repository\ProducerRepository</parameter>
        <parameter key="producer.datagrid.class">WellCommerce\Producer\DataGrid\ProducerDataGrid</parameter>
        <parameter key="producer.datagrid.configurator.class">WellCommerce\Producer\DataGrid\ProducerDataGridConfigurator</parameter>
        <parameter key="producer.datagrid.query.class">WellCommerce\Producer\DataGrid\ProducerDataGridQuery</parameter>
        <parameter key="producer.form.class">WellCommerce\Producer\Form\ProducerForm</parameter>
        <parameter key="producer.listener.class">WellCommerce\Producer\EventListener\ProducerListener</parameter>
    </parameters>

    <services>
        <service id="producer.admin.controller" class="%producer.admin.controller.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setRepository">
                <argument type="service" id="producer.repository"/>
            </call>
        </service>
        <service id="producer.front.controller" class="%producer.front.controller.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setRepository">
                <argument type="service" id="producer.repository"/>
            </call>
        </service>
        <service id="producer.box.controller" class="%producer.box.controller.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setRepository">
                <argument type="service" id="producer.repository"/>
            </call>
        </service>
        <service id="producer_list.box.controller" class="%producer_list.box.controller.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setRepository">
                <argument type="service" id="producer.repository"/>
            </call>
        </service>

        <service id="producer.repository" class="%producer.repository.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="producer.datagrid.query" class="%producer.datagrid.query.class%">
            <argument type="service" id="database_manager"/>
        </service>

        <service id="producer.datagrid.configurator" class="%producer.datagrid.configurator.class%">
            <argument key="identifier">producer</argument>
            <argument type="service" id="datagrid_options" />
            <argument type="service" id="datagrid_columns" />
            <argument type="service" id="producer.datagrid.query" />
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="producer.datagrid" class="%producer.datagrid.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="producer.repository"/>
            <argument type="service" id="datagrid_loader" />
            <configurator service="producer.datagrid.configurator" method="configure" />
        </service>

        <service id="producer.form" class="%producer.form.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="producer.listener" class="%producer.listener.class%">
            <argument type="service" id="service_container"/>
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
