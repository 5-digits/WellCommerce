<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="availability.admin.controller.class">WellCommerce\Availability\Controller\Admin\AvailabilityController</parameter>
        <parameter key="availability.model.class">WellCommerce\Availability\Model\Availability</parameter>
        <parameter key="availability_translation.model.class">WellCommerce\Availability\Model\AvailabilityTranslation</parameter>
        <parameter key="availability.repository.class">WellCommerce\Availability\Repository\AvailabilityRepository</parameter>
        <parameter key="availability.datagrid.class">WellCommerce\Availability\DataGrid\AvailabilityDataGrid</parameter>
        <parameter key="availability.datagrid.configurator.class">WellCommerce\Availability\DataGrid\AvailabilityDataGridConfigurator</parameter>
        <parameter key="availability.datagrid.query.class">WellCommerce\Availability\DataGrid\AvailabilityDataGridQuery</parameter>
        <parameter key="availability.form.class">WellCommerce\Availability\Form\AvailabilityForm</parameter>
        <parameter key="availability.listener.class">WellCommerce\Availability\EventListener\AvailabilityListener</parameter>
    </parameters>

    <services>
        <service id="availability.admin.controller" class="%availability.admin.controller.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setRepository">
                <argument type="service" id="availability.repository"/>
            </call>
        </service>

        <service id="availability.model" class="%availability.model.class%" />

        <service id="availability.datagrid.query" class="%availability.datagrid.query.class%">
            <argument type="service" id="database_manager"/>
        </service>

        <service id="availability_translation.model" class="%availability_translation.model.class%" />

        <service id="availability.repository" class="%availability.repository.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="availability.datagrid.configurator" class="%availability.datagrid.configurator.class%">
            <argument type="service" id="datagrid_options" />
            <argument type="service" id="datagrid_loader" />
            <argument type="service" id="datagrid_columns" />
            <argument type="service" id="availability.datagrid.query" />
        </service>

        <service id="availability.datagrid" class="%availability.datagrid.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="availability.repository"/>
            <configurator service="availability.datagrid.configurator" method="configure" />
        </service>

        <service id="availability.form" class="%availability.form.class%">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="availability.listener" class="%availability.listener.class%">
            <argument type="service" id="service_container"/>
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
